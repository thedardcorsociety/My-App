<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#1a1a2e">
    <title>Dardcor AI</title>
    <link rel="icon" href="/logo.png">
    
    <link rel="stylesheet" href="/css/tailwind.css">
    <link rel="stylesheet" href="/vendor/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="/css/atom-one-dark.min.css">
    <script src="/js/highlight.min.js"></script>
    <script src="/js/marked.min.js"></script>
    
    <style>
        .scrollbar-hide::-webkit-scrollbar { display: none; }
        .scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }
        pre { margin: 0; padding: 0; background: transparent; }
        .code-block-wrapper { position: relative; margin: 0.5em 0; border-radius: 0.375rem; overflow: hidden; border: 1px solid #374151; }
        .code-header { display: flex; justify-content: space-between; align-items: center; background-color: #1f2937; padding: 0.25rem 0.75rem; color: #9ca3af; font-size: 0.75rem; border-bottom: 1px solid #374151; }
        .code-content { padding: 0.75rem; background-color: #111827; overflow-x: auto; color: #e5e7eb; font-family: 'Courier New', Courier, monospace; font-size: 0.875rem; }
        .btn-action { display: flex; gap: 0.5rem; }
        .btn-code { cursor: pointer; padding: 0.125rem 0.375rem; border-radius: 0.25rem; transition: background-color 0.2s; }
        .btn-code:hover { background-color: #374151; color: #ffffff; }
        .markdown-body ul { list-style-type: disc; margin-left: 1.25em; }
        .markdown-body ol { list-style-type: decimal; margin-left: 1.25em; }
        .markdown-body p { margin-bottom: 0.5em; }
        .markdown-body h1, .markdown-body h2, .markdown-body h3 { font-weight: bold; margin-top: 0.75em; margin-bottom: 0.25em; }
        
        #main-content { transition: margin-left 0.3s cubic-bezier(0.4, 0, 0.2, 1); }
        #sidebar { transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1); }
        
        html, body { height: 100%; overflow: hidden; overscroll-behavior: none; }
        .h-dvh { height: 100vh; height: 100dvh; }
        
        .message-bubble { max-width: 85%; }
        @media (max-width: 768px) { .message-bubble { max-width: 92%; } }
    </style>
</head>
<body class="bg-[#0b0c15] text-white font-sans h-dvh flex overflow-hidden relative" id="body-drop-zone">

    <div id="drag-overlay" class="fixed inset-0 bg-purple-500/20 backdrop-blur-sm z-[100] hidden flex flex-col items-center justify-center border-4 border-purple-500 border-dashed m-4 rounded-xl pointer-events-none">
        <i class="fas fa-cloud-upload-alt text-6xl text-purple-400 mb-4 animate-bounce"></i>
        <h2 class="text-2xl font-bold text-white">Lepaskan file disini</h2>
    </div>

    <div id="rename-modal" class="fixed inset-0 z-[110] hidden items-center justify-center bg-black/80 backdrop-blur-sm p-4">
        <div class="bg-[#13131f] border border-purple-900 rounded-2xl w-full max-w-md p-6 shadow-2xl">
            <h3 class="text-lg font-bold text-white mb-1">Ganti Nama Percakapan</h3>
            <input type="text" id="rename-input" class="w-full bg-[#0b0c15] border border-gray-600 rounded-lg px-4 py-3 text-white focus:border-purple-500 outline-none mb-6 mt-4" placeholder="Nama baru...">
            <div class="flex justify-end gap-3">
                <button onclick="closeModal('rename-modal')" class="px-5 py-2.5 text-sm font-medium text-gray-300 hover:bg-gray-700 rounded-lg">Batal</button>
                <button onclick="submitRename()" class="px-5 py-2.5 text-sm font-medium bg-violet-600 hover:bg-violet-500 text-white rounded-lg">Simpan</button>
            </div>
        </div>
    </div>

    <div id="delete-modal" class="fixed inset-0 z-[110] hidden items-center justify-center bg-black/80 backdrop-blur-sm p-4">
        <div class="bg-[#13131f] border border-purple-900 rounded-2xl w-full max-w-sm p-6 shadow-2xl text-center">
            <i class="fas fa-trash-alt text-red-500 text-xl mb-4 bg-red-500/10 p-4 rounded-full border border-red-500/20"></i>
            <h3 class="text-lg font-bold text-white mb-2">Hapus Percakapan?</h3>
            <div class="flex justify-center gap-3 mt-6">
                <button onclick="closeModal('delete-modal')" class="px-5 py-2.5 text-sm font-medium bg-gray-800 hover:bg-gray-700 text-gray-300 rounded-lg w-full">Batal</button>
                <button onclick="submitDelete()" class="px-5 py-2.5 text-sm font-medium bg-red-600 hover:bg-red-500 text-white rounded-lg w-full">Hapus</button>
            </div>
        </div>
    </div>

    <div id="mobile-overlay" onclick="toggleSidebar()" class="fixed inset-0 bg-black/60 z-40 hidden md:hidden backdrop-blur-sm transition-opacity"></div>

    <aside id="sidebar" class="fixed inset-y-0 left-0 w-72 bg-[#13131f] border-r border-purple-900/30 flex flex-col transform -translate-x-full z-[60] shadow-2xl">
        
        <div class="p-4 flex items-center justify-between border-b border-purple-900/30 h-16 min-h-[4rem] shrink-0">
            <span class="font-bold text-lg tracking-wider text-purple-500">Dardcor <span class="text-white">AI</span></span>
            <div class="flex items-center gap-2">
                <button type="button" onclick="createNewChat()" class="text-gray-400 hover:text-white p-2 rounded-full hover:bg-gray-800 transition cursor-pointer relative z-50"><i class="fas fa-pen-to-square"></i></button>
                <button type="button" onclick="toggleSidebar()" class="text-gray-400 hover:text-white p-2 cursor-pointer relative z-50"><i class="fas fa-times"></i></button>
            </div>
        </div>
        
        <div class="flex-1 overflow-y-auto p-2 space-y-1.5 scrollbar-hide relative z-40">
            
            <button onclick="createNewChat()" class="w-full flex items-center gap-3 p-3 rounded-lg border border-purple-900/30 hover:bg-purple-900/20 text-left transition text-sm text-gray-300 mb-4 h-[44px] cursor-pointer relative z-50">
                <div class="w-6 h-6 bg-purple-500/20 rounded flex items-center justify-center text-purple-400"><i class="fas fa-plus text-xs"></i></div>
                <span>New Chat</span>
            </button>

            <div class="text-center text-gray-500 text-xs font-semibold uppercase tracking-wider mb-2 select-none">Riwayat</div>

            <% const currentChatExists = fullHistory && fullHistory.some(chat => chat.conversation_id === activeConversationId); %>
            <% if (!currentChatExists) { %>
                <div id="active-new-chat" class="group relative flex items-center px-3 h-[44px] rounded-lg bg-gray-800 border-l-4 border-purple-500 cursor-pointer transition select-none">
                    <i class="fas fa-message text-gray-500 mr-3 text-xs"></i>
                    <span class="text-sm truncate flex-1 text-gray-300 font-medium">Percakapan Baru</span>
                </div>
            <% } %>

            <% if (fullHistory) { %>
                <% fullHistory.forEach(chat => { %>
                    <div onclick="window.location.href='/dardcorchat/dardcor-ai/<%= chat.conversation_id %>'" 
                         class="group relative flex items-center px-3 h-[44px] rounded-lg hover:bg-[#202336] transition-colors duration-200 cursor-pointer w-full select-none <%= chat.conversation_id === activeConversationId ? 'bg-[#202336] border-l-4 border-purple-500' : 'border-l-4 border-transparent' %>">
                        
                        <div class="flex-1 min-w-0 pr-2 flex items-center h-full pointer-events-none">
                            <i class="fas fa-message text-gray-500 mr-3 text-xs flex-shrink-0"></i>
                            <span class="text-sm text-gray-300 truncate"><%= chat.message ? chat.message.substring(0, 22) : 'Percakapan' %>...</span>
                        </div>
                        
                        <div class="relative flex items-center h-full">
                            <button type="button" onclick="event.stopPropagation(); toggleMenu(event, 'menu-<%= chat.conversation_id %>')" 
                                    class="p-1.5 text-gray-500 hover:text-white rounded focus:outline-none transition opacity-0 group-hover:opacity-100 focus:opacity-100 cursor-pointer relative z-50">
                                <i class="fas fa-ellipsis-v text-xs"></i>
                            </button>
                            
                            <div id="menu-<%= chat.conversation_id %>" class="dropdown-menu hidden absolute right-0 top-8 w-32 bg-[#2a2d3d] border border-gray-700 rounded-lg shadow-xl z-[70] py-1 overflow-hidden" onclick="event.stopPropagation()">
                                <button onclick="openRenameModal('<%= chat.conversation_id %>', this.getAttribute('data-title'))" data-title="<%= chat.message %>" class="w-full text-left px-3 py-2 text-xs text-gray-300 hover:bg-purple-600 hover:text-white flex items-center gap-2 transition cursor-pointer relative z-50">
                                    <i class="fas fa-pen fa-fw"></i> Rename
                                </button>
                                <button onclick="openDeleteModal('<%= chat.conversation_id %>')" class="w-full text-left px-3 py-2 text-xs text-red-400 hover:bg-red-600 hover:text-white flex items-center gap-2 transition cursor-pointer relative z-50">
                                    <i class="fas fa-trash fa-fw"></i> Delete
                                </button>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>

        <div class="p-3 border-t border-purple-900/30 bg-[#0e0f19] min-h-[4rem] flex items-center shrink-0 relative z-50">
            <a href="/dardcorchat/profile" class="flex items-center text-gray-400 hover:text-white transition w-full">
                <img src="<%= user.profile_image || 'https://ui-avatars.com/api/?name=' + user.username + '&background=random' %>" class="w-8 h-8 rounded-full mr-3 border border-gray-700 shrink-0 object-cover">
                <div class="flex flex-col overflow-hidden">
                    <span class="text-sm font-medium text-gray-200 truncate"><%= user.username %></span>
                    <span class="text-[10px] text-gray-500">Profile</span>
                </div>
            </a>
            <a href="/dardcor-logout" class="ml-2 text-red-400 hover:text-red-300 p-2 cursor-pointer relative z-50"><i class="fas fa-sign-out-alt"></i></a>
        </div>
    </aside>

    <main id="main-content" class="flex-1 flex flex-col h-full relative w-full min-w-0 bg-[#0b0c15] z-0">
        <header class="h-16 flex items-center justify-between px-4 border-b border-purple-900/30 bg-[#0b0c15] z-30 shrink-0">
            <div class="flex items-center gap-3">
                <button type="button" onclick="toggleSidebar()" class="text-gray-400 p-2 rounded hover:bg-gray-800 transition z-50 cursor-pointer block"><i class="fas fa-bars"></i></button>
            </div>
            <div class="text-purple-500 font-bold tracking-wider text-sm flex items-center gap-2">
                <i class="fas fa-bolt"></i> Dardcor AI System
            </div>
        </header>

        <div id="chat-container" class="flex-1 overflow-y-auto w-full scrollbar-hide pt-4 md:pt-6">
            <div id="message-list" class="max-w-4xl mx-auto px-4 space-y-6 pb-6">
                <% if (!chatHistory || chatHistory.length === 0) { %>
                    <div id="empty-state" class="flex flex-col items-center justify-center text-gray-500 opacity-60 min-h-[50vh]">
                        <div class="w-24 h-24 bg-gray-800/50 rounded-full flex items-center justify-center mb-6 overflow-hidden border border-gray-700 shadow-xl bg-black">
                            <img src="/logo.png" alt="Dardcor Logo" class="w-full h-full object-cover">
                        </div>
                        <p class="text-lg font-medium text-gray-400">Apa yang bisa saya bantu?</p>
                    </div>
                <% } else { %>
                    <% chatHistory.forEach(msg => { %>
                        <div class="flex w-full <%= msg.role === 'user' ? 'justify-end' : 'justify-start' %>">
                            <div class="flex flex-col <%= msg.role === 'user' ? 'items-end' : 'items-start' %> message-bubble">
                                <div class="flex items-center gap-2 mb-1 px-1">
                                    <span class="text-[10px] uppercase tracking-wide text-gray-500 font-bold"><%= msg.role === 'user' ? 'You' : 'AI' %></span>
                                </div>
                                <div class="rounded-2xl p-4 shadow-lg text-sm leading-relaxed overflow-hidden w-full <%= msg.role === 'user' ? 'bg-violet-600 text-white rounded-br-none' : 'bg-[#13131f] text-gray-200 rounded-bl-none border border-gray-800' %>">
                                    <% if (msg.file_metadata) { %>
                                        <div class="mb-3 text-xs flex items-center gap-3 bg-black/20 p-2 rounded-lg border border-white/10">
                                            <i class="fas fa-file text-base"></i>
                                            <div class="flex flex-col overflow-hidden min-w-0">
                                                <span class="truncate font-medium text-white"><%= msg.file_metadata.filename %></span>
                                                <span class="opacity-70 text-[10px]"><%= Math.round(msg.file_metadata.size / 1024) %> KB</span>
                                            </div>
                                        </div>
                                    <% } %>
                                    <div class="markdown-body" data-role="<%= msg.role %>"><%= msg.message %></div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } %>
                <div id="loading-indicator" class="hidden flex w-full justify-start">
                    <div class="flex flex-col items-start message-bubble">
                        <span class="text-[10px] uppercase tracking-wide text-gray-500 font-bold mb-1 px-1">AI</span>
                        <div class="bg-[#13131f] px-4 py-3 rounded-2xl rounded-bl-none border border-gray-800 flex items-center gap-2 shadow-md">
                            <div class="flex space-x-1.5">
                                <div class="w-2 h-2 bg-purple-500 rounded-full animate-bounce"></div>
                                <div class="w-2 h-2 bg-purple-500 rounded-full animate-bounce" style="animation-delay: 0.15s"></div>
                                <div class="w-2 h-2 bg-purple-500 rounded-full animate-bounce" style="animation-delay: 0.3s"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="shrink-0 w-full z-30 px-3 pb-3 pt-2 md:px-6 md:pb-6 bg-transparent">
            <div class="max-w-3xl mx-auto w-full">
                <form id="chat-form" onsubmit="return false;" class="bg-[#13131f] border border-gray-700/50 rounded-2xl flex items-end shadow-2xl p-2 transition focus-within:border-purple-500 w-full relative z-10">
                    <label for="file-upload" class="p-2.5 md:p-3 text-gray-400 hover:text-white cursor-pointer transition rounded-xl hover:bg-gray-800 mb-0.5 shrink-0">
                        <i class="fas fa-paperclip text-lg"></i>
                        <input type="file" id="file-upload" name="file_attachment" class="hidden">
                    </label>
                    <div class="flex-1 flex flex-col justify-center min-h-[44px] px-2 py-1 min-w-0">
                        <div id="file-preview" class="hidden flex items-center gap-2 text-xs text-purple-300 bg-purple-500/10 rounded px-2 py-1 mb-2 border border-purple-500/20 w-fit">
                            <i class="fas fa-file-alt"></i> <span id="file-name-text" class="truncate max-w-[150px]"></span>
                            <button type="button" onclick="clearFile()" class="hover:text-red-400 ml-1"><i class="fas fa-times"></i></button>
                        </div>
                        <textarea id="message-input" rows="1" class="w-full bg-transparent border-none outline-none text-white resize-none max-h-32 placeholder-gray-500 text-sm md:text-base scrollbar-hide py-3" placeholder="Kirim pesan..."></textarea>
                    </div>
                    <button type="button" onclick="sendMessage()" id="send-btn" class="p-2.5 md:p-3 text-purple-500 hover:text-white hover:bg-purple-600 transition rounded-xl mb-0.5 cursor-pointer">
                        <i class="fas fa-paper-plane text-lg"></i>
                    </button>
                </form>
            </div>
        </div>
    </main>

    <script>
        const currentConversationId = "<%= activeConversationId || '' %>"; 
        
        const chatContainer = document.getElementById('chat-container');
        const messageList = document.getElementById('message-list');
        const messageInput = document.getElementById('message-input');
        const fileInput = document.getElementById('file-upload');
        const filePreview = document.getElementById('file-preview');
        const fileNameText = document.getElementById('file-name-text');
        const loadingIndicator = document.getElementById('loading-indicator');
        const emptyState = document.getElementById('empty-state');
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('main-content');
        const overlay = document.getElementById('mobile-overlay');
        const dragOverlay = document.getElementById('drag-overlay');
        const bodyDropZone = document.getElementById('body-drop-zone');

        let targetChatId = null;
        let dragCounter = 0;
        let isSending = false;

        function toggleSidebar() {
            const isMobile = window.innerWidth < 768;
            if (isMobile) {
                sidebar.classList.toggle('-translate-x-full');
                overlay.classList.toggle('hidden');
            } else {
                sidebar.classList.toggle('md:translate-x-0');
                mainContent.classList.toggle('md:ml-72');
            }
        }

        window.addEventListener('resize', () => {
            if (window.innerWidth >= 768) {
                overlay.classList.add('hidden');
            } else {
                sidebar.classList.remove('md:translate-x-0');
                mainContent.classList.remove('md:ml-72');
                overlay.classList.add('hidden');
            }
        });

        function toggleMenu(e, menuId) {
            e.stopPropagation(); 
            document.querySelectorAll('.dropdown-menu').forEach(el => {
                if (el.id !== menuId) el.classList.add('hidden');
            });
            const menu = document.getElementById(menuId);
            if (menu) menu.classList.toggle('hidden');
        }

        document.addEventListener('click', () => {
            document.querySelectorAll('.dropdown-menu').forEach(el => el.classList.add('hidden'));
        });

        function openRenameModal(id, currentName) {
            targetChatId = id;
            document.getElementById('rename-input').value = currentName;
            const modal = document.getElementById('rename-modal');
            modal.classList.remove('hidden');
            modal.classList.add('flex');
            setTimeout(() => document.getElementById('rename-input').focus(), 100);
        }

        function openDeleteModal(id) {
            targetChatId = id;
            const modal = document.getElementById('delete-modal');
            modal.classList.remove('hidden');
            modal.classList.add('flex');
        }

        function closeModal(modalId) {
            const modal = document.getElementById(modalId);
            modal.classList.add('hidden');
            modal.classList.remove('flex');
            targetChatId = null;
        }

        bodyDropZone.addEventListener('dragenter', (e) => {
            e.preventDefault();
            if (e.dataTransfer.types && e.dataTransfer.types.includes('Files')) {
                dragCounter++;
                dragOverlay.classList.remove('hidden'); 
            }
        });
        bodyDropZone.addEventListener('dragleave', (e) => {
            e.preventDefault();
            if (e.dataTransfer.types && e.dataTransfer.types.includes('Files')) {
                dragCounter--;
                if (dragCounter === 0) {
                    dragOverlay.classList.add('hidden');
                }
            }
        });
        bodyDropZone.addEventListener('dragover', (e) => e.preventDefault());
        bodyDropZone.addEventListener('drop', (e) => {
            e.preventDefault();
            dragCounter = 0;
            dragOverlay.classList.add('hidden');
            if (e.dataTransfer.files && e.dataTransfer.files.length > 0) {
                handleFileSelect(e.dataTransfer.files[0]);
            }
        });

        function handleFileSelect(file) {
            if (file) {
                const dataTransfer = new DataTransfer();
                dataTransfer.items.add(file);
                fileInput.files = dataTransfer.files;
                fileNameText.textContent = file.name;
                filePreview.classList.remove('hidden');
            }
        }
        fileInput.addEventListener('change', () => {
            if (fileInput.files.length > 0) {
                handleFileSelect(fileInput.files[0]);
            } else {
                filePreview.classList.add('hidden');
            }
        });
        function clearFile() {
            fileInput.value = '';
            filePreview.classList.add('hidden');
        }

        async function sendMessage() {
            if (isSending) return;
            const message = messageInput.value.trim();
            const file = fileInput.files[0];
            if (!message && !file) return;

            isSending = true;
            const currentMessage = message;
            const currentFile = file;

            messageInput.value = '';
            messageInput.style.height = 'auto';
            clearFile();
            if(emptyState) emptyState.style.display = 'none';

            const sendBtn = document.getElementById('send-btn');
            sendBtn.disabled = true;
            messageInput.disabled = true;

            appendUserMessage(currentMessage, currentFile ? currentFile.name : null, currentFile ? currentFile.size : 0);
            loadingIndicator.classList.remove('hidden');
            scrollToBottom();

            const formData = new FormData();
            formData.append('message', currentMessage);
            formData.append('conversationId', currentConversationId);
            if (currentFile) formData.append('file_attachment', currentFile);

            try {
                const res = await fetch('/dardcorchat/ai/chat', { method: 'POST', body: formData });
                const data = await res.json();
                loadingIndicator.classList.add('hidden');
                
                if (data.success) {
                    typeBotMessage(data.response);
                    const newChatLabel = document.getElementById('active-new-chat');
                    if(newChatLabel) {
                        newChatLabel.querySelector('span').innerText = currentMessage.substring(0, 22) + '...';
                        newChatLabel.id = ''; 
                        newChatLabel.classList.remove('border-l-4', 'border-purple-500');
                    }
                } else {
                    appendErrorMessage(data.response || "Terjadi kesalahan.");
                }
            } catch (err) {
                loadingIndicator.classList.add('hidden');
                appendErrorMessage("Gagal terhubung ke server.");
            } finally {
                isSending = false;
                sendBtn.disabled = false;
                messageInput.disabled = false;
                setTimeout(() => messageInput.focus(), 100);
            }
        }

        messageInput.addEventListener('input', function() {
            this.style.height = 'auto';
            this.style.height = Math.min(this.scrollHeight, 128) + 'px';
        });
        messageInput.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                sendMessage();
            }
        });

        function appendUserMessage(text, fileName, fileSize) {
            const div = document.createElement('div');
            div.className = "flex w-full justify-end";
            let fileHTML = '';
            if(fileName) {
                fileHTML = `
                <div class="mb-3 text-xs flex items-center gap-3 bg-black/20 p-2 rounded-lg border border-white/10">
                    <i class="fas fa-file text-base"></i>
                    <div class="flex flex-col overflow-hidden min-w-0">
                        <span class="truncate font-medium text-white">${fileName}</span>
                        <span class="opacity-70 text-[10px]">${Math.round(fileSize / 1024)} KB</span>
                    </div>
                </div>`;
            }
            div.innerHTML = `
            <div class="flex flex-col items-end message-bubble">
                <div class="flex items-center gap-2 mb-1 px-1"><span class="text-[10px] uppercase tracking-wide text-gray-500 font-bold">You</span></div>
                <div class="rounded-2xl p-4 shadow-lg text-sm leading-relaxed bg-violet-600 text-white rounded-br-none w-full">
                    ${fileHTML}
                    <div class="whitespace-pre-wrap">${text.replace(/</g, "&lt;").replace(/>/g, "&gt;")}</div>
                </div>
            </div>`;
            messageList.insertBefore(div, loadingIndicator);
            scrollToBottom();
        }

        function typeBotMessage(rawText) {
            const div = document.createElement('div');
            div.className = "flex w-full justify-start";
            div.innerHTML = `
                <div class="flex flex-col items-start message-bubble">
                    <div class="flex items-center gap-2 mb-1 px-1"><span class="text-[10px] uppercase tracking-wide text-gray-500 font-bold">AI</span></div>
                    <div class="rounded-2xl p-4 shadow-lg text-sm leading-relaxed bg-[#13131f] text-gray-200 rounded-bl-none border border-gray-800 w-full">
                        <div class="markdown-body typing-target"></div>
                    </div>
                </div>`;
            messageList.insertBefore(div, loadingIndicator);
            scrollToBottom();

            const target = div.querySelector('.typing-target');
            let index = 0;
            const speed = 10;
            const chunk = 5;
            
            const interval = setInterval(() => {
                index += chunk;
                if (index > rawText.length) index = rawText.length;
                const currentText = rawText.substring(0, index);
                target.innerHTML = parseMarkdown(currentText);
                enhanceCodeBlocks(target);
                scrollToBottom();

                if (index >= rawText.length) {
                    clearInterval(interval);
                }
            }, speed);
        }

        function appendErrorMessage(text) {
            const div = document.createElement('div');
            div.className = "flex w-full justify-center my-4";
            div.innerHTML = `<div class="bg-red-500/10 text-red-400 px-3 py-1.5 rounded-lg text-xs border border-red-500/20"><i class="fas fa-exclamation-circle mr-2"></i>${text}</div>`;
            messageList.insertBefore(div, loadingIndicator);
            scrollToBottom();
        }

        function scrollToBottom() {
            setTimeout(() => { chatContainer.scrollTop = chatContainer.scrollHeight; }, 50);
        }

        function parseMarkdown(text) {
            return typeof marked !== 'undefined' ? marked.parse(text) : text;
        }

        function enhanceCodeBlocks(context = document) {
            if (typeof hljs === 'undefined') return;
            context.querySelectorAll('pre code').forEach((block) => {
                if (block.closest('.code-block-wrapper')) return;
                hljs.highlightElement(block);
                
                const pre = block.parentElement;
                const wrapper = document.createElement('div');
                wrapper.className = 'code-block-wrapper';
                const header = document.createElement('div');
                header.className = 'code-header';
                const lang = block.className.replace('language-', '') || 'code';
                header.innerHTML = `<span class="font-bold text-[10px] tracking-wider">${lang.toUpperCase()}</span>`;
                
                const actions = document.createElement('div');
                actions.className = 'btn-action';
                const copyBtn = document.createElement('div');
                copyBtn.className = 'btn-code text-[10px] flex items-center gap-1';
                copyBtn.innerHTML = '<i class="fas fa-copy"></i> Copy';
                copyBtn.onclick = () => {
                    navigator.clipboard.writeText(block.innerText);
                    copyBtn.innerHTML = '<i class="fas fa-check"></i> Copied';
                    setTimeout(() => copyBtn.innerHTML = '<i class="fas fa-copy"></i> Copy', 2000);
                };
                actions.appendChild(copyBtn);
                header.appendChild(actions);
                
                pre.parentNode.insertBefore(wrapper, pre);
                wrapper.appendChild(header);
                const content = document.createElement('div');
                content.className = 'code-content';
                content.appendChild(pre);
                wrapper.appendChild(content);
            });
        }

        async function submitRename() {
            const newName = document.getElementById('rename-input').value.trim();
            if (!newName || !targetChatId) return;
            try {
                const res = await fetch('/dardcorchat/ai/rename-chat', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ conversationId: targetChatId, newTitle: newName })
                });
                const data = await res.json();
                if (data.success) window.location.reload();
            } catch (e) { alert('Error.'); }
        }

        async function submitDelete() {
            if (!targetChatId) return;
            try {
                const res = await fetch('/dardcorchat/ai/delete-chat-history', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ conversationId: targetChatId })
                });
                const data = await res.json();
                if (data.success) {
                    if (targetChatId === currentConversationId) window.location.href = '/dardcorchat/dardcor-ai';
                    else window.location.reload();
                }
            } catch (e) { alert('Error.'); }
        }

        async function createNewChat() {
            try {
                const res = await fetch('/dardcorchat/ai/new-chat', { method: 'POST' });
                const data = await res.json();
                if(data.success) window.location.href = data.redirectUrl;
            } catch(e) { console.error(e); }
        }

        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll('.markdown-body').forEach(el => {
                if(el.dataset.role === 'bot') el.innerHTML = parseMarkdown(el.textContent);
            });
            enhanceCodeBlocks();
            scrollToBottom();
        });
    </script>
