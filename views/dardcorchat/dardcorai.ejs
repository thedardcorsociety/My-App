<div id="message-list" class="max-w-3xl mx-auto space-y-6 pb-2 px-2 md:px-0">
    <% if (!chatHistory || chatHistory.length === 0) { %>
        <div id="empty-state" class="flex flex-col items-center justify-center text-gray-500 opacity-60 min-h-[50vh]">
            <div class="w-24 h-24 bg-gray-800/50 rounded-full flex items-center justify-center mb-6 overflow-hidden border border-gray-700 shadow-xl bg-black">
                <img src="/logo.png" alt="Dardcor Logo" class="w-full h-full object-cover">
            </div>
            <p class="text-lg font-medium text-gray-400 text-center">Apa yang bisa saya bantu?</p>
        </div>
    <% } else { %>
        <% chatHistory.forEach(msg => { %>
            <div class="flex w-full <%= msg.role === 'user' ? 'justify-end' : 'justify-start' %> message-bubble-container">
                <div class="flex flex-col <%= msg.role === 'user' ? 'items-end' : 'items-start' %> message-bubble w-full max-w-[95%]">
                    <div class="flex items-center gap-2 mb-1 px-1">
                        <span class="text-[10px] uppercase tracking-wide text-gray-500 font-bold"><%= msg.role === 'user' ? 'You' : 'Dardcor AI' %></span>
                    </div>
                    <% if (msg.role === 'user') { %>
                        <div class="rounded-2xl p-4 shadow-lg text-sm bg-violet-600 text-white rounded-br-none rounded-bl-2xl border-none w-fit">
                            <% if (msg.file_metadata) { %>
                                <% msg.file_metadata.forEach(f => { %>
                                    <div class="mb-2 text-xs flex gap-2 bg-black/20 p-2 rounded border border-white/10">
                                        <i class="fas fa-file"></i> <span><%= f.filename %></span>
                                    </div>
                                <% }); %>
                            <% } %>
                            <div class="whitespace-pre-wrap user-text-content"><%= msg.message %></div>
                        </div>
                        <div class="flex gap-3 mt-1 self-end pr-1 opacity-60 hover:opacity-100 transition-opacity">
                            <button onclick="copyUserText(this, decodeURIComponent('<%= encodeURIComponent(msg.message) %>'))" class="text-[10px] text-gray-400 hover:text-white transition-colors flex items-center gap-1"><i class="fas fa-copy"></i> Salin</button>
                            <button onclick="editMessage(decodeURIComponent('<%= encodeURIComponent(msg.message) %>'))" class="text-[10px] text-gray-400 hover:text-white transition-colors flex items-center gap-1"><i class="fas fa-pen"></i> Edit</button>
                        </div>
                    <% } else { %>
                        <div class="rounded-2xl p-4 shadow-lg text-sm bg-[#13131f] text-gray-200 rounded-bl-none border border-gray-800 w-full overflow-hidden">
                            <textarea class="hidden raw-message-content"><%= msg.message %></textarea>
                            <div class="markdown-body"></div>
                            <div class="mt-2 flex items-center gap-3 pt-2 border-t border-gray-800/50">
                                <button onclick="speakText(this)" class="text-gray-500 hover:text-purple-400 transition-colors" title="Baca Suara"><i class="fas fa-volume-up text-xs"></i></button>
                                <button onclick="copyMessageText(this)" class="text-gray-500 hover:text-purple-400 transition-colors" title="Salin Pesan"><i class="fas fa-copy text-xs"></i></button>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        <% }) %>
    <% } %>
    
    <div id="loading-indicator" class="hidden flex w-full justify-start mb-6">
        <div class="flex items-center gap-3 bg-[#13131f] px-4 py-3 rounded-2xl rounded-bl-none border border-gray-800 shadow-md">
            <div class="loader"></div>
            <span class="text-xs text-gray-400 font-medium animate-pulse">Sedang berpikir...</span>
        </div>
    </div>
</div>