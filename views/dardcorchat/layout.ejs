<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <title>Dardcor AI</title>
    <link rel="icon" href="/logo.png">

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/atom-one-dark.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>

    <link rel="stylesheet" href="/css/tailwind.css">
    <link rel="stylesheet" href="/vendor/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="/css/atom-one-dark.min.css">
    <script src="/js/highlight.min.js"></script>
    <script src="/js/marked.min.js"></script>
    
    <style>
        html, body { height: 100dvh; width: 100%; margin: 0; padding: 0; overflow: hidden; background-color: #0b0c15; position: fixed; inset: 0; }
        .scrollbar-hide::-webkit-scrollbar { display: none; }
        .scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }
        pre { margin: 0; padding: 0; background: transparent; }
        .safe-pt { padding-top: env(safe-area-inset-top); }
        .safe-pb { padding-bottom: env(safe-area-inset-bottom); }
        .message-bubble { max-width: 95%; }

        /* --- TERMINAL HITAM POLOS (FIXED) --- */
        .terminal-wrapper {
            margin: 10px 0;
            background-color: #000000; /* Hitam Pekat */
            border: 1px solid #333;
            border-radius: 6px;
            overflow: hidden;
            font-family: 'Consolas', 'Monaco', monospace;
            box-shadow: 0 4px 6px rgba(0,0,0,0.5);
            width: 100%;
        }

        .terminal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #1a1a1a;
            padding: 8px 12px;
            border-bottom: 1px solid #333;
        }

        .terminal-lang {
            color: #888;
            font-size: 11px;
            text-transform: uppercase;
            font-weight: bold;
        }

        .terminal-actions {
            display: flex;
            gap: 8px;
        }

        .t-btn {
            display: flex;
            align-items: center;
            gap: 5px;
            padding: 4px 10px;
            border-radius: 4px;
            font-size: 11px;
            font-weight: 600;
            cursor: pointer;
            border: none;
            transition: opacity 0.2s;
        }
        .t-btn:hover { opacity: 0.8; }

        .btn-preview { background-color: #7c3aed; color: white; } /* Ungu */
        .btn-copy { background-color: #333; color: #ccc; }

        .terminal-body {
            padding: 15px;
            overflow-x: auto;
            color: #f0f0f0;
            font-size: 13px;
            line-height: 1.5;
            background-color: #0c0c0c;
        }
    </style>
</head>
<body class="flex text-white font-sans" id="body-drop-zone">

    <div id="drag-overlay" class="fixed inset-0 bg-purple-500/20 backdrop-blur-sm z-[100] hidden flex-col items-center justify-center border-4 border-purple-500 border-dashed m-4 rounded-xl pointer-events-none">
        <i class="fas fa-cloud-upload-alt text-6xl text-purple-400 mb-4 animate-bounce"></i>
        <h2 class="text-xl font-bold text-white text-center">Lepaskan file disini</h2>
    </div>
    
    <div id="mobile-overlay" onclick="toggleSidebar()" class="fixed inset-0 bg-black/60 z-40 hidden lg:hidden backdrop-blur-sm transition-opacity"></div>

    <aside id="sidebar" class="fixed inset-y-0 left-0 w-72 bg-[#13131f] border-r border-purple-900/30 flex flex-col transform -translate-x-full z-[60] shadow-2xl safe-pl transition-transform duration-300">
        <div class="h-16 shrink-0 flex items-center justify-between px-4 border-b border-purple-900/30 safe-pt">
            <span class="font-bold text-lg tracking-wider text-purple-500 flex items-center gap-2">
                <img src="/logo.png" class="w-6 h-6 rounded-full"> Dardcor <span class="text-white">AI</span>
            </span>
            <button onclick="toggleSidebar()" class="text-gray-400 hover:text-white p-2 rounded-lg hover:bg-white/10 transition-colors"><i class="fas fa-times text-lg"></i></button>
        </div>
        <div class="flex-1 overflow-y-auto p-3 space-y-1.5 scrollbar-hide relative z-40">
            <button onclick="createNewChat()" class="w-full flex items-center gap-3 p-3 rounded-lg border border-purple-900/30 hover:bg-purple-900/20 text-left transition text-sm text-gray-300 mb-4 h-[44px]">
                <div class="w-6 h-6 bg-purple-500/20 rounded flex items-center justify-center text-purple-400"><i class="fas fa-plus text-xs"></i></div><span>New Chat</span>
            </button>
            <div class="text-gray-500 text-xs font-semibold uppercase tracking-wider mb-2 px-2">Riwayat</div>
            <% if (fullHistory) { fullHistory.forEach(chat => { %>
                <div onclick="window.location.href='/dardcorchat/dardcor-ai/<%= chat.conversation_id %>'" class="group relative flex items-center px-3 h-[44px] rounded-lg hover:bg-[#202336] cursor-pointer w-full <%= chat.conversation_id === activeConversationId ? 'bg-[#202336] border-l-4 border-purple-500' : 'border-l-4 border-transparent' %>">
                    <div class="flex-1 min-w-0 pr-2 flex items-center h-full pointer-events-none">
                        <i class="fas fa-message text-gray-500 mr-3 text-xs flex-shrink-0"></i>
                        <span class="text-sm text-gray-300 truncate"><%= chat.message ? chat.message.substring(0, 22) : 'Percakapan' %>...</span>
                    </div>
                    <div class="relative flex items-center h-full">
                        <button onclick="event.stopPropagation(); toggleMenu(event, 'menu-<%= chat.conversation_id %>')" class="p-1.5 text-gray-500 hover:text-white rounded opacity-0 group-hover:opacity-100 focus:opacity-100"><i class="fas fa-ellipsis-v text-xs"></i></button>
                        <div id="menu-<%= chat.conversation_id %>" class="dropdown-menu hidden absolute right-0 top-8 w-32 bg-[#2a2d3d] border border-gray-700 rounded-lg shadow-xl z-[70] py-1 overflow-hidden">
                            <button onclick="openDeleteModal('<%= chat.conversation_id %>')" class="w-full text-left px-3 py-2 text-xs text-red-400 hover:bg-red-600 hover:text-white flex items-center gap-2"><i class="fas fa-trash"></i> Delete</button>
                        </div>
                    </div>
                </div>
            <% }) } %>
        </div>
        <div class="p-3 border-t border-purple-900/30 bg-[#0e0f19] min-h-[4rem] flex items-center shrink-0 safe-pb">
            <a href="/dardcorchat/profile" class="flex items-center text-gray-400 hover:text-white transition w-full gap-3">
                <img src="<%= user.profile_image || 'https://ui-avatars.com/api/?name=' + user.username %>" class="w-8 h-8 rounded-full border border-gray-700 object-cover">
                <div class="flex flex-col overflow-hidden"><span class="text-sm font-medium text-gray-200 truncate"><%= user.username %></span><span class="text-[10px] text-gray-500">Profile</span></div>
            </a>
            <a href="/dardcor-logout" class="ml-2 text-gray-500 hover:text-red-400 p-2"><i class="fas fa-sign-out-alt"></i></a>
        </div>
    </aside>

    <main id="main-content" class="flex-1 flex flex-col h-full relative w-full min-w-0 bg-[#0b0c15] transition-all duration-300">
        <header class="absolute top-0 left-0 right-0 h-16 flex items-center justify-between px-4 border-b border-purple-900/30 bg-[#0b0c15]/95 backdrop-blur-md z-50 safe-pt">
            <button onclick="toggleSidebar()" class="text-gray-400 p-2 rounded hover:bg-gray-800 transition-colors"><i class="fas fa-bars text-lg"></i></button>
            <div class="relative">
                <button onclick="toggleToolsMenu()" class="flex items-center gap-2 px-3 py-1.5 rounded-lg border border-purple-500/30 bg-purple-500/10 text-purple-400 text-xs md:text-sm font-medium hover:bg-purple-500/20 hover:text-white transition-all">
                    <% if (typeof toolType !== 'undefined' && toolType === 'image') { %><i class="fas fa-image"></i> <span>Image Gen</span><% } else { %><i class="fas fa-bolt"></i> <span>Dardcor Tools</span><% } %>
                    <i class="fas fa-chevron-down text-[10px] ml-1 transition-transform" id="tools-chevron"></i>
                </button>
                <div id="tools-menu" class="hidden absolute right-0 top-full mt-2 w-48 bg-[#1f2937] border border-gray-700 rounded-xl shadow-xl z-[80] overflow-hidden">
                    <button onclick="createNewChat()" class="w-full text-left block px-4 py-3 text-sm hover:bg-purple-600 hover:text-white transition flex items-center gap-3 border-b border-gray-700/50"><i class="fas fa-comment-dots w-5 text-center"></i> Dardcor Chat</button>
                    <a href="/dardcorchat/tool/image" class="block px-4 py-3 text-sm hover:bg-purple-600 hover:text-white transition flex items-center gap-3"><i class="fas fa-image w-5 text-center"></i> Create Image</a>
                </div>
            </div>
        </header>

        <div id="chat-container" class="absolute top-16 bottom-[88px] lg:bottom-[100px] left-0 right-0 overflow-y-auto scrollbar-hide px-4 pt-4 pb-2 w-full">
            <%- include(contentPage) %>
        </div>

        <%- include('input') %>
    </main>

    <div id="delete-modal" class="fixed inset-0 z-[110] hidden items-center justify-center bg-black/80 backdrop-blur-sm p-4 safe-pb">
        <div class="bg-[#13131f] border border-purple-900 rounded-2xl w-full max-w-sm p-6 text-center">
            <h3 class="text-lg font-bold text-white mb-4">Hapus Chat?</h3>
            <div class="flex justify-center gap-3"><button onclick="closeModal('delete-modal')" class="px-5 py-2.5 text-gray-300 bg-gray-800 rounded-lg w-full">Batal</button><button onclick="submitDelete()" class="px-5 py-2.5 bg-red-600 text-white rounded-lg w-full">Hapus</button></div>
        </div>
    </div>

    <script>
        const currentConversationId = "<%= activeConversationId || '' %>";
        const currentToolType = "<%= typeof toolType !== 'undefined' ? toolType : 'chat' %>";
        const chatContainer = document.getElementById('chat-container');
        const messageInput = document.getElementById('message-input');
        const fileInput = document.getElementById('file-upload');
        const filePreview = document.getElementById('file-preview');
        const fileNameText = document.getElementById('file-name-text');
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('main-content');
        const overlay = document.getElementById('mobile-overlay');
        const toolsMenu = document.getElementById('tools-menu');
        const messageList = document.getElementById('message-list');
        const loadingIndicator = document.getElementById('loading-indicator');
        let targetChatId = null;
        let isSending = false;

        // --- RENDERER MARKDOWN CUSTOM (FIXED OBJECT BUG) ---
        const renderer = new marked.Renderer();
        renderer.code = function(code, language) {
            // FIX 1: Pastikan code selalu string
            let validCode = "";
            if (typeof code === 'string') {
                validCode = code;
            } else if (code && code.text) { 
                validCode = code.text; 
            } else {
                validCode = String(code);
            }

            // FIX 2: Logic Highlight yang Aman (Fail-safe)
            let highlighted = validCode;
            let lang = language || 'text';
            
            if (lang && hljs.getLanguage(lang)) {
                try {
                    const result = hljs.highlight(validCode, { language: lang });
                    // Cek apakah result mengembalikan object atau string
                    highlighted = (typeof result === 'object' && result.value) ? result.value : result;
                } catch (e) {
                    try {
                        const result = hljs.highlight(lang, validCode);
                        highlighted = (typeof result === 'object' && result.value) ? result.value : result;
                    } catch(e2) {
                        highlighted = validCode; // Fallback ke teks biasa
                    }
                }
            }

            // Jika hasil highlight malah jadi [object Object], paksa balik ke validCode
            if (String(highlighted) === '[object Object]') {
                highlighted = validCode;
            }

            // FIX 3: Logic Tombol Preview
            let previewButton = '';
            // Deteksi bahasa kode web
            const isWebCode = !lang || ['html', 'xml', 'ejs', 'php', 'javascript', 'css'].includes(lang.toLowerCase());
            
            if (isWebCode) {
                previewButton = `
                <button onclick="previewCode(this)" class="t-btn btn-preview">
                    <i class="fas fa-play text-[9px]"></i> Preview
                </button>`;
            }

            // Render HTML Terminal
            return `
            <div class="terminal-wrapper code-block-wrapper">
                <div class="terminal-header">
                    <span class="terminal-lang">${lang}</span>
                    <div class="terminal-actions">
                        ${previewButton}
                        <button onclick="copyCode(this)" class="t-btn btn-copy">
                            <i class="fas fa-copy"></i> Copy
                        </button>
                    </div>
                </div>
                <div class="terminal-body">
                    <pre><code class="hljs ${lang}">${highlighted}</code></pre>
                    <textarea class="raw-code hidden">${validCode}</textarea>
                </div>
            </div>`;
        };
        marked.setOptions({ renderer: renderer });

        // --- FUNGSI PREVIEW YANG BENAR ---
        async function previewCode(btn) {
            const wrapper = btn.closest('.terminal-wrapper');
            // Ambil dari textarea hidden untuk menjamin teks murni
            let rawCode = wrapper.querySelector('.raw-code') ? wrapper.querySelector('.raw-code').value : wrapper.querySelector('code').innerText;
            
            const originalHtml = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> ...';
            btn.disabled = true;

            try {
                const res = await fetch('/dardcorchat/ai/store-preview', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ code: rawCode })
                });
                
                const data = await res.json();
                
                if (data.success) {
                    window.open(`/dardcorchat/dardcor-ai/preview/${data.previewId}`, '_blank');
                } else {
                    alert('Gagal membuat preview.');
                }
            } catch(e) {
                console.error(e);
                alert('Terjadi kesalahan koneksi.');
            } finally {
                btn.innerHTML = originalHtml;
                btn.disabled = false;
            }
        }

        function copyCode(btn) {
            const wrapper = btn.closest('.terminal-wrapper');
            const code = wrapper.querySelector('.raw-code') ? wrapper.querySelector('.raw-code').value : wrapper.querySelector('code').innerText;
            navigator.clipboard.writeText(code).then(() => {
                btn.innerHTML = '<i class="fas fa-check text-green-400"></i>';
                setTimeout(() => { btn.innerHTML = '<i class="fas fa-copy"></i> Copy'; }, 2000);
            });
        }

        // --- FUNGSI UI STANDARD ---
        function toggleSidebar() {
            const isClosed = sidebar.classList.contains('-translate-x-full');
            if (isClosed) {
                sidebar.classList.remove('-translate-x-full');
                if (window.innerWidth < 1024) overlay.classList.remove('hidden');
                else mainContent.classList.add('lg:ml-72');
            } else {
                sidebar.classList.add('-translate-x-full');
                overlay.classList.add('hidden');
                mainContent.classList.remove('lg:ml-72');
            }
        }
        window.addEventListener('resize', () => { if(window.innerWidth >= 1024) overlay.classList.add('hidden'); });
        function toggleToolsMenu() { toolsMenu.classList.toggle('hidden'); document.getElementById('tools-chevron')?.classList.toggle('rotate-180'); }
        document.addEventListener('click', (e) => { 
            if (!toolsMenu.contains(e.target) && !e.target.closest('button[onclick="toggleToolsMenu()"]')) {
                toolsMenu.classList.add('hidden'); document.getElementById('tools-chevron')?.classList.remove('rotate-180');
            }
            document.querySelectorAll('.dropdown-menu').forEach(e => e.classList.add('hidden')); 
        });
        function toggleMenu(e, id) { e.stopPropagation(); document.getElementById(id).classList.toggle('hidden'); }

        async function sendMessage() {
            if(isSending) return;
            const msg = messageInput.value.trim();
            const file = fileInput.files[0];
            if(!msg && !file) return;
            
            isSending = true;
            document.getElementById('send-btn').disabled = true; 
            messageInput.value = ''; messageInput.style.height = 'auto'; clearFile();
            
            const emptyState = document.getElementById('empty-state');
            if(emptyState) emptyState.style.display = 'none';
            appendUserMessage(msg, file ? file.name : null);
            
            messageList.appendChild(loadingIndicator);
            loadingIndicator.classList.remove('hidden');
            scrollToBottom();

            const fd = new FormData();
            fd.append('message', msg); fd.append('conversationId', currentConversationId); fd.append('toolType', currentToolType);
            if(file) fd.append('file_attachment', file);

            try {
                const res = await fetch('/dardcorchat/ai/chat', { method: 'POST', body: fd });
                const data = await res.json();
                loadingIndicator.classList.add('hidden');
                if(data.success) typeBotMessage(data.response);
                else appendError(data.response);
            } catch(e) { 
                loadingIndicator.classList.add('hidden');
                appendError("Gagal terhubung."); 
            } finally {
                isSending = false;
                document.getElementById('send-btn').disabled = false;
                setTimeout(() => messageInput.focus(), 100);
            }
        }

        function appendUserMessage(text, fname) {
            const div = document.createElement('div');
            div.className = "flex w-full justify-end mb-6";
            let fhtml = fname ? `<div class="mb-2 text-xs flex gap-2 bg-black/20 p-2 rounded border border-white/10"><i class="fas fa-file"></i> <span>${fname}</span></div>` : '';
            div.innerHTML = `<div class="flex flex-col items-end message-bubble"><div class="rounded-2xl p-4 shadow-lg text-sm bg-violet-600 text-white rounded-br-none w-full">${fhtml}<div class="whitespace-pre-wrap">${text.replace(/</g, "&lt;")}</div></div></div>`;
            document.getElementById('message-list').appendChild(div);
        }

        function typeBotMessage(raw) {
            const div = document.createElement('div');
            div.className = "flex w-full justify-start mb-6";
            div.innerHTML = `<div class="flex flex-col items-start message-bubble"><div class="rounded-2xl p-4 shadow-lg text-sm bg-[#13131f] text-gray-200 rounded-bl-none border border-gray-800 w-full"><div class="markdown-body typing-target"></div></div></div>`;
            document.getElementById('message-list').appendChild(div);
            
            const target = div.querySelector('.typing-target');
            if(raw.includes('![Generated Image]')) {
                target.innerHTML = marked.parse(raw);
                scrollToBottom();
                return;
            }
            let i = 0;
            const int = setInterval(() => {
                i += 10;
                if(i > raw.length) i = raw.length;
                target.innerHTML = marked.parse(raw.substring(0, i));
                scrollToBottom();
                if(i >= raw.length) clearInterval(int);
            }, 5);
        }

        function appendError(txt) {
            const div = document.createElement('div');
            div.className = "flex w-full justify-center my-4";
            div.innerHTML = `<div class="bg-red-500/10 text-red-400 px-3 py-1 text-xs border border-red-500/20 rounded">${txt}</div>`;
            document.getElementById('message-list').appendChild(div);
            scrollToBottom();
        }

        function scrollToBottom() { if(chatContainer) chatContainer.scrollTo({ top: chatContainer.scrollHeight, behavior: 'smooth' }); }
        messageInput.addEventListener('keydown', (e) => { if(e.key === 'Enter' && !e.shiftKey) { e.preventDefault(); sendMessage(); }});
        messageInput.addEventListener('input', function() { this.style.height='auto'; this.style.height=Math.min(this.scrollHeight,120)+'px'; });
        fileInput.addEventListener('change', () => { if(fileInput.files[0]) { fileNameText.textContent = fileInput.files[0].name; filePreview.classList.remove('hidden'); filePreview.classList.add('flex'); } });
        function clearFile() { fileInput.value=''; filePreview.classList.add('hidden'); filePreview.classList.remove('flex'); }
        function openDeleteModal(id) { targetChatId = id; document.getElementById('delete-modal').classList.remove('hidden'); document.getElementById('delete-modal').classList.add('flex'); }
        function closeModal(id) { document.getElementById(id).classList.add('hidden'); document.getElementById(id).classList.remove('flex'); }
        async function createNewChat() { try { const res = await fetch('/dardcorchat/ai/new-chat', { method: 'POST' }); const data = await res.json(); if(data.success) window.location.href = data.redirectUrl; } catch(e) {} }
        async function submitDelete() { await fetch('/dardcorchat/ai/delete-chat-history', { method: 'POST', headers:{'Content-Type':'application/json'}, body: JSON.stringify({conversationId:targetChatId})}); if(targetChatId === currentConversationId) window.location.href = '/dardcorchat/dardcor-ai'; else window.location.reload(); }

        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll('.markdown-body').forEach(el => el.innerHTML = marked.parse(el.textContent));
            scrollToBottom();
            if('serviceWorker' in navigator) navigator.serviceWorker.register('/sw.js');
        });
    </script>
</body>
</html>