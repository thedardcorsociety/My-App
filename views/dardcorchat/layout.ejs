<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#0b0c15">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <title>Dardcor AI</title>
    <link rel="icon" href="/logo.png">
    <link rel="stylesheet" href="/css/tailwind.css">
    <link rel="stylesheet" href="/vendor/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="/css/atom-one-dark.min.css">
    <script src="/js/highlight.min.js"></script>
    <script src="/js/marked.min.js"></script>
    
    <style>
        /* PWA LOCK */
        html, body { 
            height: 100dvh; 
            width: 100%; 
            margin: 0; 
            padding: 0; 
            overflow: hidden; 
            background-color: #0b0c15;
            position: fixed; 
            inset: 0;
            overscroll-behavior: none;
        }

        .scrollbar-hide::-webkit-scrollbar { display: none; }
        .scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }
        pre { margin: 0; padding: 0; background: transparent; }
        .code-block-wrapper { position: relative; margin: 0.5em 0; border-radius: 0.375rem; overflow: hidden; border: 1px solid #374151; }
        .code-header { display: flex; justify-content: space-between; align-items: center; background-color: #1f2937; padding: 0.25rem 0.75rem; color: #9ca3af; font-size: 0.75rem; border-bottom: 1px solid #374151; user-select: none; }
        .code-content { padding: 0.75rem; background-color: #111827; overflow-x: auto; color: #e5e7eb; font-family: 'Courier New', Courier, monospace; font-size: 0.875rem; }
        .safe-pt { padding-top: env(safe-area-inset-top); }
        .safe-pb { padding-bottom: env(safe-area-inset-bottom); }
        .message-bubble { max-width: 85%; }
        @media (max-width: 768px) { .message-bubble { max-width: 90%; } }
    </style>
</head>
<body class="flex text-white font-sans" id="body-drop-zone">

    <div id="drag-overlay" class="fixed inset-0 bg-purple-500/20 backdrop-blur-sm z-[100] hidden flex-col items-center justify-center border-4 border-purple-500 border-dashed m-4 rounded-xl pointer-events-none">
        <i class="fas fa-cloud-upload-alt text-6xl text-purple-400 mb-4 animate-bounce"></i>
        <h2 class="text-xl font-bold text-white text-center">Lepaskan file disini</h2>
    </div>
    
    <div id="mobile-overlay" onclick="toggleSidebar()" class="fixed inset-0 bg-black/60 z-40 hidden lg:hidden backdrop-blur-sm transition-opacity"></div>

    <aside id="sidebar" class="fixed inset-y-0 left-0 w-72 bg-[#13131f] border-r border-purple-900/30 flex flex-col transform -translate-x-full z-[60] shadow-2xl safe-pl transition-transform duration-300">
        <div class="h-16 shrink-0 flex items-center justify-between px-4 border-b border-purple-900/30 safe-pt">
            <span class="font-bold text-lg tracking-wider text-purple-500 flex items-center gap-2">
                <img src="/logo.png" class="w-6 h-6 rounded-full"> Dardcor <span class="text-white">AI</span>
            </span>
            <button onclick="toggleSidebar()" class="text-gray-400 hover:text-white p-2 rounded-lg hover:bg-white/10 transition-colors">
                <i class="fas fa-times text-lg"></i>
            </button>
        </div>
        
        <div class="flex-1 overflow-y-auto p-3 space-y-1.5 scrollbar-hide relative z-40">
            <button onclick="createNewChat()" class="w-full flex items-center gap-3 p-3 rounded-lg border border-purple-900/30 hover:bg-purple-900/20 text-left transition text-sm text-gray-300 mb-4 h-[44px]">
                <div class="w-6 h-6 bg-purple-500/20 rounded flex items-center justify-center text-purple-400"><i class="fas fa-plus text-xs"></i></div>
                <span>New Chat</span>
            </button>

            <div class="text-gray-500 text-xs font-semibold uppercase tracking-wider mb-2 px-2">Riwayat</div>

            <% const currentChatExists = fullHistory && fullHistory.some(chat => chat.conversation_id === activeConversationId); %>
            <% if (!currentChatExists) { %>
                <div id="active-new-chat" class="flex items-center px-3 h-[44px] rounded-lg bg-gray-800 border-l-4 border-purple-500 cursor-default">
                    <i class="fas fa-message text-gray-500 mr-3 text-xs"></i>
                    <span class="text-sm truncate flex-1 text-gray-300 font-medium">Percakapan Baru</span>
                </div>
            <% } %>

            <% if (fullHistory) { %>
                <% fullHistory.forEach(chat => { %>
                    <div onclick="window.location.href='/dardcorchat/dardcor-ai/<%= chat.conversation_id %>'" 
                        class="group relative flex items-center px-3 h-[44px] rounded-lg hover:bg-[#202336] cursor-pointer w-full <%= chat.conversation_id === activeConversationId ? 'bg-[#202336] border-l-4 border-purple-500' : 'border-l-4 border-transparent' %>">
                        <div class="flex-1 min-w-0 pr-2 flex items-center h-full pointer-events-none">
                            <i class="fas fa-message text-gray-500 mr-3 text-xs flex-shrink-0"></i>
                            <span class="text-sm text-gray-300 truncate"><%= chat.message ? chat.message.substring(0, 22) : 'Percakapan' %>...</span>
                        </div>
                        <div class="relative flex items-center h-full">
                            <button onclick="event.stopPropagation(); toggleMenu(event, 'menu-<%= chat.conversation_id %>')" class="p-1.5 text-gray-500 hover:text-white rounded opacity-0 group-hover:opacity-100 focus:opacity-100"><i class="fas fa-ellipsis-v text-xs"></i></button>
                            <div id="menu-<%= chat.conversation_id %>" class="dropdown-menu hidden absolute right-0 top-8 w-32 bg-[#2a2d3d] border border-gray-700 rounded-lg shadow-xl z-[70] py-1 overflow-hidden">
                                <button onclick="openRenameModal('<%= chat.conversation_id %>', this.getAttribute('data-title'))" data-title="<%= chat.message %>" class="w-full text-left px-3 py-2 text-xs text-gray-300 hover:bg-purple-600 hover:text-white flex items-center gap-2"><i class="fas fa-pen"></i> Rename</button>
                                <button onclick="openDeleteModal('<%= chat.conversation_id %>')" class="w-full text-left px-3 py-2 text-xs text-red-400 hover:bg-red-600 hover:text-white flex items-center gap-2"><i class="fas fa-trash"></i> Delete</button>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>

        <div class="p-3 border-t border-purple-900/30 bg-[#0e0f19] min-h-[4rem] flex items-center shrink-0 safe-pb">
            <a href="/dardcorchat/profile" class="flex items-center text-gray-400 hover:text-white transition w-full gap-3">
                <img src="<%= user.profile_image || 'https://ui-avatars.com/api/?name=' + user.username %>" class="w-8 h-8 rounded-full border border-gray-700 object-cover">
                <div class="flex flex-col overflow-hidden"><span class="text-sm font-medium text-gray-200 truncate"><%= user.username %></span><span class="text-[10px] text-gray-500">Profile</span></div>
            </a>
            <a href="/dardcor-logout" class="ml-2 text-gray-500 hover:text-red-400 p-2"><i class="fas fa-sign-out-alt"></i></a>
        </div>
    </aside>

    <main id="main-content" class="flex-1 flex flex-col h-full relative w-full min-w-0 bg-[#0b0c15] transition-all duration-300">
        
        <header class="absolute top-0 left-0 right-0 h-16 flex items-center justify-between px-4 border-b border-purple-900/30 bg-[#0b0c15]/95 backdrop-blur-md z-50 safe-pt">
            <div class="flex items-center gap-3">
                <button onclick="toggleSidebar()" class="text-gray-400 p-2 rounded hover:bg-gray-800 transition-colors">
                    <i class="fas fa-bars text-lg"></i>
                </button>
            </div>
            
            <div class="relative">
                <button onclick="toggleToolsMenu()" class="flex items-center gap-2 px-3 py-1.5 rounded-lg border border-purple-500/30 bg-purple-500/10 text-purple-400 text-xs md:text-sm font-medium hover:bg-purple-500/20 hover:text-white transition-all">
                    <% if (typeof toolType !== 'undefined' && toolType === 'image') { %>
                        <i class="fas fa-image"></i> <span>Image Gen</span>
                    <% } else { %>
                        <i class="fas fa-bolt"></i> <span>Dardcor Tools</span>
                    <% } %>
                    <i class="fas fa-chevron-down text-[10px] ml-1 transition-transform" id="tools-chevron"></i>
                </button>
                <div id="tools-menu" class="hidden absolute right-0 top-full mt-2 w-48 bg-[#1f2937] border border-gray-700 rounded-xl shadow-xl z-[80] overflow-hidden">
                    <button onclick="createNewChat()" class="w-full text-left block px-4 py-3 text-sm hover:bg-purple-600 hover:text-white transition flex items-center gap-3 border-b border-gray-700/50">
                        <i class="fas fa-comment-dots w-5 text-center"></i> Dardcor Chat
                    </button>
                    <a href="/dardcorchat/tool/image" class="block px-4 py-3 text-sm hover:bg-purple-600 hover:text-white transition flex items-center gap-3">
                        <i class="fas fa-image w-5 text-center"></i> Create Image
                    </a>
                </div>
            </div>
        </header>

        <div id="chat-container" class="absolute top-16 bottom-[88px] lg:bottom-[100px] left-0 right-0 overflow-y-auto scrollbar-hide px-4 pt-4 pb-2 w-full">
            <%- include(contentPage) %>
        </div>

        <div class="absolute bottom-0 left-0 right-0 w-full z-50 px-4 pb-6 lg:pb-10 pt-2 bg-[#0b0c15] safe-pb border-t border-transparent">
            <div class="max-w-3xl mx-auto w-full">
                <form id="chat-form" onsubmit="return false;" class="bg-[#13131f] border border-gray-700/50 rounded-2xl flex items-center shadow-2xl p-2 w-full relative z-10 transition-colors focus-within:border-purple-500/50">
                    <label for="file-upload" class="p-3 text-gray-400 hover:text-white cursor-pointer hover:bg-gray-800 rounded-xl shrink-0 flex items-center justify-center transition-colors">
                        <i class="fas fa-paperclip text-lg"></i>
                        <input type="file" id="file-upload" name="file_attachment" class="hidden">
                    </label>
                    <div class="flex-1 min-w-0 px-2 flex flex-col justify-center min-h-[44px]">
                        <div id="file-preview" class="hidden flex items-center gap-2 text-xs text-purple-300 bg-purple-500/10 rounded px-2 py-1 mb-1 w-fit max-w-full">
                            <i class="fas fa-file-alt text-xs"></i> <span id="file-name-text" class="truncate max-w-[120px]"></span>
                            <button onclick="clearFile()" class="hover:text-red-400 ml-1"><i class="fas fa-times"></i></button>
                        </div>
                        <textarea id="message-input" rows="1" class="w-full bg-transparent border-none outline-none text-white resize-none max-h-32 placeholder-gray-500 text-base scrollbar-hide py-2 flex items-center" 
                            placeholder="<%= (typeof toolType !== 'undefined' && toolType === 'image') ? 'Deskripsikan gambar...' : 'Kirim pesan...' %>"></textarea>
                    </div>
                    <button onclick="sendMessage()" id="send-btn" class="p-3 text-purple-500 hover:text-white hover:bg-purple-600 rounded-xl shrink-0 flex items-center justify-center transition-colors"><i class="fas fa-paper-plane text-lg"></i></button>
                </form>
                <p class="text-center text-[10px] text-gray-600 mt-3 select-none">AI dapat membuat kesalahan. Cek info penting.</p>
            </div>
        </div>
    </main>

    <div id="rename-modal" class="fixed inset-0 z-[110] hidden items-center justify-center bg-black/80 backdrop-blur-sm p-4 safe-pb">
        <div class="bg-[#13131f] border border-purple-900 rounded-2xl w-full max-w-md p-6">
            <h3 class="text-lg font-bold text-white mb-4">Ganti Nama</h3>
            <input type="text" id="rename-input" class="w-full bg-[#0b0c15] border border-gray-600 rounded-lg px-4 py-3 text-white outline-none mb-6">
            <div class="flex justify-end gap-3"><button onclick="closeModal('rename-modal')" class="px-5 py-2.5 text-gray-300 bg-gray-800 rounded-lg">Batal</button><button onclick="submitRename()" class="px-5 py-2.5 bg-violet-600 text-white rounded-lg">Simpan</button></div>
        </div>
    </div>
    <div id="delete-modal" class="fixed inset-0 z-[110] hidden items-center justify-center bg-black/80 backdrop-blur-sm p-4 safe-pb">
        <div class="bg-[#13131f] border border-purple-900 rounded-2xl w-full max-w-sm p-6 text-center">
            <h3 class="text-lg font-bold text-white mb-4">Hapus Chat?</h3>
            <div class="flex justify-center gap-3"><button onclick="closeModal('delete-modal')" class="px-5 py-2.5 text-gray-300 bg-gray-800 rounded-lg w-full">Batal</button><button onclick="submitDelete()" class="px-5 py-2.5 bg-red-600 text-white rounded-lg w-full">Hapus</button></div>
        </div>
    </div>

    <script>
        const currentConversationId = "<%= activeConversationId || '' %>";
        const currentToolType = "<%= typeof toolType !== 'undefined' ? toolType : 'chat' %>";
        const chatContainer = document.getElementById('chat-container');
        const messageInput = document.getElementById('message-input');
        const fileInput = document.getElementById('file-upload');
        const filePreview = document.getElementById('file-preview');
        const fileNameText = document.getElementById('file-name-text');
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('main-content');
        const overlay = document.getElementById('mobile-overlay');
        const toolsMenu = document.getElementById('tools-menu');
        const messageList = document.getElementById('message-list');
        const loadingIndicator = document.getElementById('loading-indicator');
        let targetChatId = null;
        let isSending = false;

        // --- Sidebar Logic (Updated for Closed by Default) ---
        function toggleSidebar() {
            const isClosed = sidebar.classList.contains('-translate-x-full');
            
            // Toggle Logic yang sama untuk Mobile & Desktop
            if (isClosed) {
                // BUKA SIDEBAR
                sidebar.classList.remove('-translate-x-full');
                if (window.innerWidth < 1024) {
                    overlay.classList.remove('hidden'); // Mobile: Pakai Overlay
                } else {
                    mainContent.classList.add('lg:ml-72'); // Desktop: Geser Konten
                }
            } else {
                // TUTUP SIDEBAR
                sidebar.classList.add('-translate-x-full');
                overlay.classList.add('hidden');
                mainContent.classList.remove('lg:ml-72'); // Desktop: Konten Full Width
            }
        }
        
        window.addEventListener('resize', () => {
            if(window.innerWidth >= 1024) {
                overlay.classList.add('hidden');
            } else {
                // Saat resize ke mobile, pastikan sidebar tertutup agar rapi
                if (!sidebar.classList.contains('-translate-x-full')) {
                    sidebar.classList.add('-translate-x-full');
                }
            }
        });

        function toggleToolsMenu() { 
            toolsMenu.classList.toggle('hidden'); 
            const chevron = document.getElementById('tools-chevron');
            if(chevron) chevron.classList.toggle('rotate-180');
        }
        
        function toggleMenu(e, id) { e.stopPropagation(); document.getElementById(id).classList.toggle('hidden'); }
        
        document.addEventListener('click', (e) => { 
            const btn = document.querySelector('button[onclick="toggleToolsMenu()"]');
            if (btn && !btn.contains(e.target) && !toolsMenu.contains(e.target)) {
                toolsMenu.classList.add('hidden'); 
                const chevron = document.getElementById('tools-chevron');
                if(chevron) chevron.classList.remove('rotate-180');
            }
            document.querySelectorAll('.dropdown-menu').forEach(e => e.classList.add('hidden')); 
        });

        async function sendMessage() {
            if(isSending) return;
            const msg = messageInput.value.trim();
            const file = fileInput.files[0];
            if(!msg && !file) return;
            
            isSending = true;
            const btn = document.getElementById('send-btn');
            btn.disabled = true; messageInput.value = ''; messageInput.style.height = 'auto'; clearFile();
            
            const emptyState = document.getElementById('empty-state');
            if(emptyState) emptyState.style.display = 'none';
            
            appendUserMessage(msg, file ? file.name : null, file ? file.size : 0);
            
            if(currentToolType === 'image') {
                document.getElementById('loading-text').innerText = 'Generating Image...';
            } else {
                document.getElementById('loading-text').innerText = 'Sedang memproses...';
            }
            
            messageList.appendChild(loadingIndicator);
            loadingIndicator.classList.remove('hidden');
            scrollToBottom();

            const fd = new FormData();
            fd.append('message', msg); fd.append('conversationId', currentConversationId); fd.append('toolType', currentToolType);
            if(file) fd.append('file_attachment', file);

            try {
                const res = await fetch('/dardcorchat/ai/chat', { method: 'POST', body: fd });
                const data = await res.json();
                loadingIndicator.classList.add('hidden');
                if(data.success) typeBotMessage(data.response);
                else appendError(data.response);
            } catch(e) { 
                loadingIndicator.classList.add('hidden');
                appendError("Gagal terhubung."); 
            } finally {
                isSending = false; btn.disabled = false;
                setTimeout(() => messageInput.focus(), 100);
            }
        }

        function appendUserMessage(text, fname, fsize) {
            const div = document.createElement('div'); div.className = "flex w-full justify-end mb-6";
            let fhtml = fname ? `<div class="mb-2 text-xs flex gap-2 bg-black/20 p-2 rounded border border-white/10"><i class="fas fa-file"></i> <span>${fname}</span></div>` : '';
            div.innerHTML = `<div class="flex flex-col items-end message-bubble"><div class="rounded-2xl p-4 shadow-lg text-sm bg-violet-600 text-white rounded-br-none w-full">${fhtml}<div class="whitespace-pre-wrap">${text.replace(/</g, "&lt;")}</div></div></div>`;
            document.getElementById('message-list').appendChild(div);
        }

        function typeBotMessage(raw) {
            const div = document.createElement('div'); div.className = "flex w-full justify-start mb-6";
            div.innerHTML = `<div class="flex flex-col items-start message-bubble"><div class="rounded-2xl p-4 shadow-lg text-sm bg-[#13131f] text-gray-200 rounded-bl-none border border-gray-800 w-full"><div class="markdown-body typing-target"></div></div></div>`;
            document.getElementById('message-list').appendChild(div);
            
            const target = div.querySelector('.typing-target');
            if(raw.includes('![Generated Image]')) {
                target.innerHTML = marked.parse(raw);
                scrollToBottom();
                return;
            }
            let i = 0; const speed=8;
            const int = setInterval(() => {
                i += 5;
                if(i > raw.length) i = raw.length;
                target.innerHTML = marked.parse(raw.substring(0, i));
                enhanceCodeBlocks(target);
                scrollToBottom();
                if(i >= raw.length) clearInterval(int);
            }, speed);
        }

        function appendError(txt) {
            const div = document.createElement('div'); div.className = "flex w-full justify-center my-4";
            div.innerHTML = `<div class="bg-red-500/10 text-red-400 px-3 py-1 text-xs border border-red-500/20 rounded">${txt}</div>`;
            document.getElementById('message-list').appendChild(div);
            scrollToBottom();
        }

        function scrollToBottom() {
            if(chatContainer) chatContainer.scrollTo({ top: chatContainer.scrollHeight, behavior: 'smooth' });
        }

        messageInput.addEventListener('keydown', (e) => { if(e.key === 'Enter' && !e.shiftKey) { e.preventDefault(); sendMessage(); }});
        messageInput.addEventListener('input', function() { this.style.height='auto'; this.style.height=Math.min(this.scrollHeight,120)+'px'; });
        
        fileInput.addEventListener('change', () => { 
            if(fileInput.files[0]) { fileNameText.textContent = fileInput.files[0].name; filePreview.classList.remove('hidden'); filePreview.classList.add('flex'); } 
        });
        function clearFile() { fileInput.value=''; filePreview.classList.add('hidden'); filePreview.classList.remove('flex'); }

        function enhanceCodeBlocks(ctx=document) {
            if(typeof hljs !== 'undefined') ctx.querySelectorAll('pre code').forEach(block => hljs.highlightElement(block));
        }

        function openRenameModal(id, name) { targetChatId = id; document.getElementById('rename-input').value = name; document.getElementById('rename-modal').classList.remove('hidden'); document.getElementById('rename-modal').classList.add('flex'); }
        function openDeleteModal(id) { targetChatId = id; document.getElementById('delete-modal').classList.remove('hidden'); document.getElementById('delete-modal').classList.add('flex'); }
        function closeModal(id) { document.getElementById(id).classList.add('hidden'); document.getElementById(id).classList.remove('flex'); }

        async function createNewChat() {
            try {
                const res = await fetch('/dardcorchat/ai/new-chat', { method: 'POST' });
                const data = await res.json();
                if(data.success) window.location.href = data.redirectUrl;
            } catch(e) {}
        }
        async function submitRename() {
            const newName = document.getElementById('rename-input').value;
            if(!newName) return;
            await fetch('/dardcorchat/ai/rename-chat', { method: 'POST', headers:{'Content-Type':'application/json'}, body: JSON.stringify({conversationId:targetChatId, newTitle:newName})});
            window.location.reload();
        }
        async function submitDelete() {
            await fetch('/dardcorchat/ai/delete-chat-history', { method: 'POST', headers:{'Content-Type':'application/json'}, body: JSON.stringify({conversationId:targetChatId})});
            if(targetChatId === currentConversationId) window.location.href = '/dardcorchat/dardcor-ai'; else window.location.reload();
        }

        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll('.markdown-body').forEach(el => el.innerHTML = marked.parse(el.textContent));
            enhanceCodeBlocks();
            scrollToBottom();
            if('serviceWorker' in navigator) navigator.serviceWorker.register('/sw.js');
        });
    </script>
</body>
</html>