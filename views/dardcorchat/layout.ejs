<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <title>Dardcor AI</title>
    <link rel="icon" href="/logo.png">
    <link rel="manifest" href="/manifest.json">

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/vs2015.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>

    <link rel="stylesheet" href="/css/tailwind.css">
    <link rel="stylesheet" href="/vendor/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="/css/atom-one-dark.min.css">
    <script src="/js/highlight.min.js"></script>
    <script src="/js/marked.min.js"></script>

    <style>
        html, body { 
            height: 100dvh; width: 100%; margin: 0; padding: 0; overflow: hidden;
            background-color: #0b0c15; position: fixed; inset: 0; 
        }
        .scrollbar-hide::-webkit-scrollbar { display: none; }
        .scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }
        pre { margin: 0; padding: 0; background: transparent; }
        .safe-pt { padding-top: env(safe-area-inset-top); }
        .safe-pb { padding-bottom: env(safe-area-inset-bottom); }
        .safe-pl { padding-left: env(safe-area-inset-left); }
        .message-bubble { max-width: 95%; }

        /* TERMINAL HITAM POLOS */
        .terminal-container { 
            margin: 12px 0;
            background-color: #000000; 
            border: 1px solid #333; 
            border-radius: 6px; 
            overflow: hidden; 
            font-family: 'Consolas', 'Monaco', monospace; 
            width: 100%; 
        }
        .terminal-head { 
            display: flex;
            justify-content: space-between; 
            align-items: center; 
            background-color: #111; 
            padding: 6px 12px; 
            border-bottom: 1px solid #333; 
            height: 40px;
        }
        .terminal-label { 
            color: #ccc;
            font-size: 11px; 
            font-weight: 700; 
            text-transform: uppercase; 
        }
        .terminal-opts { display: flex; gap: 8px; align-items: center; }
        
        .cmd-btn { 
            display: flex;
            align-items: center; gap: 5px; 
            padding: 4px 10px; border-radius: 4px; 
            font-size: 11px; font-weight: 600; 
            cursor: pointer; border: none; transition: all 0.2s;
        }
        .btn-preview { background-color: #0e639c; color: white; }
        .btn-preview:hover { background-color: #1177bb; }
        .btn-cp { background-color: #333; color: #e5e5e5; }
        .btn-cp:hover { background-color: #444; }
        
        .terminal-code { 
            padding: 0;
            overflow-x: auto; 
            background-color: #000000; 
            color: #f8f8f2; 
        }
        .terminal-code pre { margin: 0; }
        .terminal-code code { 
            font-family: 'Consolas', monospace;
            font-size: 13px; line-height: 1.5; 
            background: transparent !important; 
            padding: 16px !important;
            display: block;
        }
        .markdown-body p { margin-bottom: 1em; }
        .markdown-body a { color: #a78bfa; text-decoration: underline; }
    </style>
</head>
<body class="flex text-white font-sans">

    <div id="mobile-overlay" onclick="toggleSidebar()" class="fixed inset-0 bg-black/60 z-40 hidden backdrop-blur-sm transition-opacity"></div>

    <aside id="sidebar" class="fixed inset-y-0 left-0 w-72 bg-[#13131f] border-r border-purple-900/30 flex flex-col transform -translate-x-full z-[60] shadow-2xl safe-pl transition-transform duration-300">
        <div class="h-16 shrink-0 flex items-center justify-between px-4 border-b border-purple-900/30 safe-pt">
            <span class="font-bold text-lg tracking-wider text-purple-500 flex items-center gap-2">
                <img src="/logo.png" class="w-6 h-6 rounded-full"> Dardcor <span class="text-white">AI</span>
            </span>
            <button onclick="toggleSidebar()" class="text-gray-400 hover:text-white p-2 rounded hover:bg-white/10 transition-colors">
                <i class="fas fa-times text-lg"></i>
            </button>
        </div>
        
        <div class="flex-1 overflow-y-auto p-3 space-y-1.5 scrollbar-hide relative z-40">
            <button onclick="createNewChat()" class="w-full flex items-center gap-3 p-3 rounded-lg border border-purple-900/30 hover:bg-purple-900/20 text-left transition text-sm text-gray-300 mb-4 h-[44px]">
                <div class="w-6 h-6 bg-purple-500/20 rounded flex items-center justify-center text-purple-400"><i class="fas fa-plus text-xs"></i></div><span>New Chat</span>
            </button>
            <div class="text-gray-500 text-xs font-semibold uppercase tracking-wider mb-2 px-2">Riwayat</div>
            
            <% 
                // Cek apakah chat aktif ada di list riwayat
                let isNewChat = true;
                if (conversationList && conversationList.length > 0) {
                    isNewChat = !conversationList.some(c => c.id === activeConversationId);
                }
            %>

            <% if (isNewChat) { %>
                <div class="group relative flex items-center px-3 h-[44px] rounded-lg bg-[#202336] border-l-4 border-purple-500 cursor-default w-full mb-1">
                    <div class="flex-1 min-w-0 pr-2 flex items-center h-full pointer-events-none">
                        <i class="fas fa-message text-purple-500 mr-3 text-xs flex-shrink-0"></i>
                        <span class="text-sm text-white font-medium truncate">Percakapan Baru</span>
                    </div>
                </div>
            <% } %>

            <% if (conversationList) { conversationList.forEach(chat => { %>
                <div id="chat-item-<%= chat.id %>" onclick="window.location.href='/dardcorchat/dardcor-ai/<%= chat.id %>'" class="group relative flex items-center px-3 h-[44px] rounded-lg hover:bg-[#202336] cursor-pointer w-full <%= chat.id === activeConversationId ? 'bg-[#202336] border-l-4 border-purple-500' : 'border-l-4 border-transparent' %>">
                    <div class="flex-1 min-w-0 pr-2 flex items-center h-full pointer-events-none">
                        <i class="fas fa-message text-gray-500 mr-3 text-xs flex-shrink-0"></i>
                        <span id="title-<%= chat.id %>" class="text-sm text-gray-300 truncate"><%= chat.title ? chat.title.substring(0, 22) : 'Percakapan' %>...</span>
                        
                        <input type="hidden" id="raw-title-<%= chat.id %>" value="<%= chat.title %>">
                    </div>
                    <div class="relative flex items-center h-full">
                        <button onclick="event.stopPropagation(); toggleMenu(event, 'menu-<%= chat.id %>')" class="p-1.5 text-gray-500 hover:text-white rounded opacity-0 group-hover:opacity-100 focus:opacity-100"><i class="fas fa-ellipsis-v text-xs"></i></button>
                        <div id="menu-<%= chat.id %>" class="dropdown-menu hidden absolute right-0 top-8 w-32 bg-[#2a2d3d] border border-gray-700 rounded-lg shadow-xl z-[70] py-1 overflow-hidden">
                            <button onclick="openRenameModal('<%= chat.id %>')" class="w-full text-left px-3 py-2 text-xs text-gray-300 hover:bg-gray-700 hover:text-white flex items-center gap-2"><i class="fas fa-edit"></i> Edit</button>
                            <button onclick="openDeleteModal('<%= chat.id %>')" class="w-full text-left px-3 py-2 text-xs text-red-400 hover:bg-red-600 hover:text-white flex items-center gap-2"><i class="fas fa-trash"></i> Delete</button>
                        </div>
                    </div>
                </div>
            <% }) } %>
        </div>
        <div class="p-3 border-t border-purple-900/30 bg-[#0e0f19] min-h-[4rem] flex items-center shrink-0 safe-pb">
            <a href="/dardcorchat/profile" class="flex items-center text-gray-400 hover:text-white transition w-full gap-3">
                <img src="<%= user.profile_image || 'https://ui-avatars.com/api/?name=' + user.username %>" class="w-8 h-8 rounded-full border border-gray-700 object-cover">
                <div class="flex flex-col overflow-hidden"><span class="text-sm font-medium text-gray-200 truncate"><%= user.username %></span><span class="text-[10px] text-gray-500">Profile</span></div>
            </a>
            <a href="/dardcor-logout" class="ml-2 text-gray-500 hover:text-red-400 p-2"><i class="fas fa-sign-out-alt"></i></a>
        </div>
    </aside>

    <main id="main-content" class="absolute inset-0 left-0 transition-all duration-300 flex flex-col bg-[#0b0c15]">
        <header class="h-16 shrink-0 flex items-center justify-between px-4 border-b border-purple-900/30 bg-[#0b0c15]/95 backdrop-blur-md z-50 safe-pt">
            
            <div class="flex items-center">
                <button onclick="toggleSidebar()" class="text-gray-400 p-2 rounded hover:bg-gray-800 transition-colors">
                    <i class="fas fa-bars text-lg"></i>
                </button>
            </div>

            <div class="relative ml-auto">
                <button onclick="toggleToolsMenu()" class="flex items-center gap-2 px-3 py-1.5 rounded-lg border border-purple-500/30 bg-purple-500/10 text-purple-400 text-xs md:text-sm font-medium hover:bg-purple-500/20 hover:text-white transition-all">
                    <% if (typeof toolType !== 'undefined' && toolType === 'image') { %><i class="fas fa-image"></i> <span>Image Gen</span><% } else { %><i class="fas fa-bolt"></i> <span>Dardcor Tools</span><% } %>
                    <i class="fas fa-chevron-down text-[10px] ml-1 transition-transform" id="tools-chevron"></i>
                </button>
                <div id="tools-menu" class="hidden absolute right-0 top-full mt-2 w-48 bg-[#1f2937] border border-gray-700 rounded-xl shadow-xl z-[80] overflow-hidden">
                    <button onclick="createNewChat()" class="w-full text-left block px-4 py-3 text-sm hover:bg-purple-600 hover:text-white transition flex items-center gap-3 border-b border-gray-700/50"><i class="fas fa-comment-dots w-5 text-center"></i> Dardcor Chat</button>
                    <a href="/dardcorchat/tool/image" class="block px-4 py-3 text-sm hover:bg-purple-600 hover:text-white transition flex items-center gap-3"><i class="fas fa-image w-5 text-center"></i> Create Image</a>
                </div>
            </div>
        </header>

        <div id="chat-container" class="flex-1 overflow-y-auto scrollbar-hide px-4 pt-4 w-full relative">
            <%- include(contentPage) %>
            <div class="h-[120px]"></div> 
        </div>

        <%- include('input') %>
    </main>

    <div id="delete-modal" class="fixed inset-0 z-[110] hidden items-center justify-center bg-black/80 backdrop-blur-sm p-4 safe-pb">
        <div class="bg-[#13131f] border border-purple-900 rounded-2xl w-full max-w-sm p-6 text-center">
            <h3 class="text-lg font-bold text-white mb-4">Hapus Chat?</h3>
            <div class="flex justify-center gap-3">
                <button onclick="closeModal('delete-modal')" class="px-5 py-2.5 text-gray-300 bg-gray-800 rounded-lg w-full">Batal</button>
                <button onclick="submitDelete()" class="px-5 py-2.5 bg-red-600 text-white rounded-lg w-full">Hapus</button>
            </div>
        </div>
    </div>

    <div id="rename-modal" class="fixed inset-0 z-[110] hidden items-center justify-center bg-black/80 backdrop-blur-sm p-4 safe-pb">
        <div class="bg-[#13131f] border border-purple-900 rounded-2xl w-full max-w-sm p-6 text-center">
            <h3 class="text-lg font-bold text-white mb-4">Ubah Nama</h3>
            <input type="text" id="rename-input" class="w-full bg-black/30 border border-gray-700 rounded-lg p-3 text-white mb-4 outline-none focus:border-purple-500" placeholder="Nama chat baru...">
            <div class="flex justify-center gap-3">
                <button onclick="closeModal('rename-modal')" class="px-5 py-2.5 text-gray-300 bg-gray-800 rounded-lg w-full">Batal</button>
                <button onclick="submitRename()" class="px-5 py-2.5 bg-purple-600 text-white rounded-lg w-full">Simpan</button>
            </div>
        </div>
    </div>

    <script>
        const currentConversationId = "<%= activeConversationId || '' %>";
        const currentToolType = "<%= typeof toolType !== 'undefined' ? toolType : 'chat' %>";
        const chatContainer = document.getElementById('chat-container');
        const messageInput = document.getElementById('message-input');
        // File input logic now handled in input.ejs
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('mobile-overlay');
        const toolsMenu = document.getElementById('tools-menu');
        const messageList = document.getElementById('message-list');
        const loadingIndicator = document.getElementById('loading-indicator');
        let targetChatId = null;
        let isSending = false;

        const escapeHtml = (unsafe) => {
            return unsafe.replace(/&/g, "&amp;").replace(/</g, "&lt;").replace(/>/g, "&gt;").replace(/"/g, "&quot;").replace(/'/g, "&#039;");
        };

        const renderer = new marked.Renderer();
        renderer.code = function(code, language) {
            let validCode = "";
            if (typeof code === 'string') { validCode = code; }
            else if (code && code.text) { validCode = code.text; }
            else { validCode = String(code); }

            let highlighted = "";
            let lang = (language || '').toLowerCase().trim();
            
            if (!lang && (validCode.includes('<!DOCTYPE') || validCode.includes('<html') || validCode.includes('<body'))) {
                lang = 'html';
            }

            if (lang && hljs.getLanguage(lang)) {
                try {
                    const result = hljs.highlight(validCode, { language: lang });
                    highlighted = result.value; 
                } catch (e) { highlighted = escapeHtml(validCode); }
            } else { 
                highlighted = escapeHtml(validCode); 
            }

            if (!highlighted || String(highlighted) === '[object Object]') { 
                highlighted = escapeHtml(validCode); 
            }

            let previewButton = '';
            if (['html', 'xml', 'ejs', 'php', 'javascript', 'css'].includes(lang) || lang === '') {
                previewButton = `<button onclick="previewCode(this)" class="cmd-btn btn-preview"><i class="fas fa-play text-[9px]"></i> Preview</button>`;
            }

            return `
            <div class="terminal-container code-block-wrapper">
                <div class="terminal-head">
                    <div class="terminal-label"><i class="fas fa-code mr-1"></i> ${lang ? lang.toUpperCase() : 'CODE'}</div>
                    <div class="terminal-opts">
                        ${previewButton}
                        <button onclick="copyCode(this)" class="cmd-btn btn-cp"><i class="fas fa-copy"></i> Copy</button>
                    </div>
                </div>
                <div class="terminal-code">
                    <pre><code class="hljs ${lang}">${highlighted}</code></pre>
                    <textarea class="raw-code hidden">${escapeHtml(validCode)}</textarea>
                </div>
            </div>`;
        };
        marked.setOptions({ renderer: renderer });

        async function previewCode(btn) {
            const wrapper = btn.closest('.terminal-container');
            const textArea = wrapper.querySelector('.raw-code');
            const txt = document.createElement("textarea");
            txt.innerHTML = textArea.value;
            let rawCode = txt.value;

            const originalHtml = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
            btn.disabled = true;
            try {
                const res = await fetch('/dardcorchat/ai/store-preview', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ code: rawCode })
                });
                const data = await res.json();
                if (data.success) window.open(`/dardcorchat/dardcor-ai/preview/${data.previewId}`, '_blank');
                else alert('Gagal memproses preview.');
            } catch(e) { alert('Error sistem preview.'); } 
            finally { 
                btn.innerHTML = originalHtml;
                btn.disabled = false; 
            }
        }

        function copyCode(btn) {
            const wrapper = btn.closest('.terminal-container');
            const textArea = wrapper.querySelector('.raw-code');
            const txt = document.createElement("textarea");
            txt.innerHTML = textArea.value;
            const code = txt.value;
            
            navigator.clipboard.writeText(code).then(() => {
                const originalHtml = btn.innerHTML;
                btn.innerHTML = '<i class="fas fa-check"></i>';
                setTimeout(() => { btn.innerHTML = originalHtml; }, 2000);
            });
        }

        function toggleSidebar() {
            if (sidebar.classList.contains('-translate-x-full')) {
                sidebar.classList.remove('-translate-x-full');
                overlay.classList.remove('hidden');
            } else {
                sidebar.classList.add('-translate-x-full');
                overlay.classList.add('hidden');
            }
        }
        
        window.addEventListener('resize', () => { 
            if(window.innerWidth >= 1024) {
                overlay.classList.add('hidden'); 
            }
        });
        function toggleToolsMenu() { toolsMenu.classList.toggle('hidden'); document.getElementById('tools-chevron')?.classList.toggle('rotate-180'); }
        document.addEventListener('click', (e) => { 
            if (!toolsMenu.contains(e.target) && !e.target.closest('button[onclick="toggleToolsMenu()"]')) {
                toolsMenu.classList.add('hidden'); document.getElementById('tools-chevron')?.classList.remove('rotate-180');
            }
            document.querySelectorAll('.dropdown-menu').forEach(e => e.classList.add('hidden')); 
        });
        function toggleMenu(e, id) { e.stopPropagation(); document.querySelectorAll('.dropdown-menu').forEach(e => e.classList.add('hidden')); document.getElementById(id).classList.toggle('hidden'); }

        async function sendMessage() {
            if(isSending) return;
            const msg = messageInput.value.trim();
            // selectedFiles global variable comes from input.ejs
            if(!msg && selectedFiles.length === 0) return;
            
            isSending = true;
            document.getElementById('send-btn').disabled = true;
            messageInput.blur(); 
            messageInput.value = ''; messageInput.style.height = 'auto'; 
            
            const emptyState = document.getElementById('empty-state');
            if(emptyState) emptyState.style.display = 'none';
            
            // Create preview string for user message
            let fileInfo = null;
            if(selectedFiles.length > 0) {
                fileInfo = `${selectedFiles.length} file`;
            }
            appendUserMessage(msg, fileInfo);
            
            messageList.appendChild(loadingIndicator);
            loadingIndicator.classList.remove('hidden');
            scrollToBottom();

            const fd = new FormData();
            fd.append('message', msg); 
            fd.append('conversationId', currentConversationId); 
            fd.append('toolType', currentToolType);
            
            // Append multiple files
            selectedFiles.forEach(file => {
                fd.append('file_attachment', file);
            });

            // Clear input visual immediately
            clearFiles(); 

            try {
                const res = await fetch('/dardcorchat/ai/chat', { method: 'POST', body: fd });
                const data = await res.json();
                loadingIndicator.classList.add('hidden');
                if(data.success) typeBotMessage(data.response);
                else appendError(data.response);
            } catch(e) { 
                loadingIndicator.classList.add('hidden');
                appendError("Gagal terhubung ke Dardcor Server."); 
            } finally {
                isSending = false;
                document.getElementById('send-btn').disabled = false;
            }
        }

        function appendUserMessage(text, fname) {
            const div = document.createElement('div');
            div.className = "flex w-full justify-end mb-6";
            let fhtml = fname ? `<div class="mb-2 text-xs flex gap-2 bg-black/20 p-2 rounded border border-white/10"><i class="fas fa-file"></i> <span>${fname}</span></div>` : '';
            div.innerHTML = `<div class="flex flex-col items-end message-bubble"><div class="rounded-2xl p-4 shadow-lg text-sm bg-violet-600 text-white rounded-br-none w-full">${fhtml}<div class="whitespace-pre-wrap">${text.replace(/</g, "&lt;")}</div></div></div>`;
            document.getElementById('message-list').appendChild(div);
        }

        function typeBotMessage(raw) {
            const div = document.createElement('div');
            div.className = "flex w-full justify-start mb-6";
            div.innerHTML = `<div class="flex flex-col items-start message-bubble"><div class="flex items-center gap-2 mb-1 px-1"><span class="text-[10px] uppercase tracking-wide text-gray-500 font-bold">Dardcor AI</span></div><div class="rounded-2xl p-4 shadow-lg text-sm bg-[#13131f] text-gray-200 rounded-bl-none border border-gray-800 w-full overflow-hidden"><div class="markdown-body typing-target"></div></div></div>`;
            document.getElementById('message-list').appendChild(div);
            
            const target = div.querySelector('.typing-target');
            if(raw.includes('![Generated Image]')) {
                target.innerHTML = marked.parse(raw);
                scrollToBottom();
                return;
            }
            
            const fullHtml = marked.parse(raw);
            let currentHtml = "";
            let i = 0;
            const step = 20; 
            const interval = setInterval(() => {
                if (i >= raw.length) {
                    target.innerHTML = fullHtml; 
                    clearInterval(interval);
                    scrollToBottom();
                    return;
                }
                target.innerHTML = marked.parse(raw.substring(0, i + step)); 
                i += step;
                scrollToBottom();
            }, 5);
        }

        function appendError(txt) {
            const div = document.createElement('div');
            div.className = "flex w-full justify-center my-4";
            div.innerHTML = `<div class="bg-red-500/10 text-red-400 px-3 py-1 text-xs border border-red-500/20 rounded">${txt}</div>`;
            document.getElementById('message-list').appendChild(div);
            scrollToBottom();
        }

        function scrollToBottom() { if(chatContainer) chatContainer.scrollTop = chatContainer.scrollHeight; }
        messageInput.addEventListener('keydown', (e) => { if(e.key === 'Enter' && !e.shiftKey) { e.preventDefault(); sendMessage(); }});
        messageInput.addEventListener('input', function() { this.style.height='auto'; this.style.height=Math.min(this.scrollHeight,120)+'px'; });
        
        // --- MODAL & LOGIC ---
        function closeModal(id) { 
            document.getElementById(id).classList.add('hidden'); 
            document.getElementById(id).classList.remove('flex'); 
        }
        
        function openDeleteModal(id) { 
            targetChatId = id; 
            document.getElementById('delete-modal').classList.remove('hidden'); 
            document.getElementById('delete-modal').classList.add('flex'); 
        }

        function openRenameModal(id) { 
            targetChatId = id;
            // AMBIL VALUE DARI HIDDEN INPUT (AMAN DARI ERROR SYNTAX)
            const hiddenInput = document.getElementById('raw-title-' + id);
            const currentTitle = hiddenInput ? hiddenInput.value : '';
            
            document.getElementById('rename-input').value = currentTitle;
            document.getElementById('rename-modal').classList.remove('hidden'); 
            document.getElementById('rename-modal').classList.add('flex');
            document.getElementById('rename-input').blur(); 
        }

        async function createNewChat() { 
            try { 
                const res = await fetch('/dardcorchat/ai/new-chat', { method: 'POST' }); 
                const data = await res.json(); 
                if(data.success) window.location.href = data.redirectUrl; 
            } catch(e) {} 
        }
        
        async function submitDelete() { 
            closeModal('delete-modal');
            await fetch('/dardcorchat/ai/delete-chat-history', { 
                method: 'POST', 
                headers:{'Content-Type':'application/json'}, 
                body: JSON.stringify({conversationId:targetChatId})
            }); 
            
            if(targetChatId === currentConversationId) {
                window.location.href = '/dardcorchat/dardcor-ai';
            } else {
                const elem = document.getElementById(`chat-item-${targetChatId}`);
                if(elem) elem.remove();
            }
        }

        async function submitRename() {
            const newName = document.getElementById('rename-input').value;
            closeModal('rename-modal');
            if(!newName.trim()) return;

            const res = await fetch('/dardcorchat/ai/rename-chat', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ conversationId: targetChatId, newTitle: newName })
            });
            
            if(res.ok) {
                const titleElem = document.getElementById(`title-${targetChatId}`);
                if(titleElem) titleElem.innerText = newName.substring(0, 22) + (newName.length > 22 ? '...' : '');
                // Update hidden value juga
                const hiddenElem = document.getElementById(`raw-title-${targetChatId}`);
                if(hiddenElem) hiddenElem.value = newName;
            }
        }

        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll('.message-bubble-container').forEach(container => {
                const rawEl = container.querySelector('.raw-message-content');
                const targetEl = container.querySelector('.markdown-body');
                if (rawEl && targetEl) {
                    targetEl.innerHTML = marked.parse(rawEl.value);
                }
            });
            scrollToBottom();
            if('serviceWorker' in navigator) navigator.serviceWorker.register('/sw.js');
        });
    </script>
</body>
</html>