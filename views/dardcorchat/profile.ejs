<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <title>Dardcor AI</title>
    <link rel="icon" href="/logo.png">
    <link rel="manifest" href="/manifest.json">

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/vs2015.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>

    <link rel="stylesheet" href="/css/tailwind.css">
    <link rel="stylesheet" href="/vendor/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="/css/atom-one-dark.min.css">
    <script src="/js/highlight.min.js"></script>
    <script src="/js/marked.min.js"></script>
    
    <style>
        body { font-family: sans-serif; background-color: #0b0c15; color: #cbd5e1; }
        .profile-card {
            background: linear-gradient(145deg, #13131f, #0b0c15);
            border: 1px solid #334155;
            box-shadow: 0 10px 25px rgba(0,0,0,0.3);
        }
        input {
            background: rgba(19, 19, 31, 0.7);
            border: 1px solid #334155;
            color: white;
        }
        input:focus {
            border-color: #8b5cf6;
            box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.2);
            outline: none;
        }
        .navbar { backdrop-filter: blur(10px); }
    </style>
</head>
<body class="min-h-screen flex flex-col">

    <nav class="navbar sticky top-0 z-30 bg-purple-900/10 border-b border-purple-900/30 px-4 py-3 shadow-sm">
        <div class="max-w-6xl mx-auto flex justify-between items-center">
            <a href="/dardcorchat/dardcorai" class="flex items-center gap-2 text-white font-bold text-xl hover:text-purple-400 transition-colors">
                <i class="fas fa-arrow-left"></i> Dardcor
            </a>
            <span class="text-sm font-medium text-slate-400">Edit Profile</span>
        </div>
    </nav>

    <main class="flex-grow flex items-center justify-center p-4">
        <div class="profile-card w-full max-w-2xl rounded-2xl p-6 md:p-10">
            
            <h1 class="text-2xl font-bold text-white mb-6 border-b border-slate-700 pb-4">Pengaturan Akun</h1>

            <% if (typeof success !== 'undefined' && success) { %>
                <div class="mb-6 p-4 bg-green-500/20 border border-green-500/50 rounded-lg text-green-400 flex items-center">
                    <i class="fas fa-check-circle mr-2"></i> <%= success %>
                </div>
            <% } %>

            <% if (typeof error !== 'undefined' && error) { %>
                <div class="mb-6 p-4 bg-red-500/20 border border-red-500/50 rounded-lg text-red-400 flex items-center">
                    <i class="fas fa-exclamation-triangle mr-2"></i> <%= error %>
                </div>
            <% } %>

            <form action="/dardcor/profile/update" method="POST" enctype="multipart/form-data" class="space-y-6">
                
                <div class="flex flex-col items-center sm:flex-row sm:items-start gap-6 mb-8">
                    <div class="relative group">
                        <img src="<%= user.profile_image || 'https://ui-avatars.com/api/?name=' + (user.username || 'User') + '&background=random&color=fff' %>" 
                             alt="Profile" class="w-24 h-24 rounded-full object-cover border-4 border-slate-700 group-hover:border-purple-500 transition-colors shadow-lg">
                        <div class="absolute bottom-0 right-0 bg-violet-600 text-white p-1.5 rounded-full border-2 border-[#13131f] shadow-md group-hover:bg-violet-500 transition-colors">
                            <i class="fas fa-camera text-xs"></i>
                        </div>
                        <input type="file" name="profile_image" class="absolute inset-0 w-full h-full opacity-0 cursor-pointer" title="Ubah Foto Profil">
                    </div>

                    <div class="flex-1 text-center sm:text-left pt-2">
                        <h3 class="text-xl font-bold text-white"><%= user.username %></h3>
                        <p class="text-sm text-slate-400 mb-2"><%= user.email %></p>
                        <p class="text-xs text-slate-500 bg-purple-900/20 inline-block px-3 py-1 rounded-full border border-purple-900/30">Klik foto untuk mengubah avatar</p>
                    </div>
                </div>

                <div class="grid grid-cols-1 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-slate-400 mb-2">Username</label>
                        <div class="relative">
                            <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-slate-500 pointer-events-none">
                                <i class="fas fa-user"></i>
                            </span>
                            <input type="text" name="username" value="<%= user.username %>" class="w-full p-3 pl-10 rounded-lg transition-all" placeholder="Username">
                        </div>
                    </div>
                </div>

                <div class="border-t border-slate-700 pt-6 mt-6">
                    <h3 class="text-lg font-semibold text-white mb-4 flex items-center gap-2">
                        <i class="fas fa-lock text-purple-400"></i> Ganti Password
                    </h3>
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-slate-400 mb-2">Password Baru <span class="text-xs text-slate-500">(Kosongkan jika tidak ingin ubah)</span></label>
                            <div class="relative">
                                <input type="password" id="newPassword" name="password" class="w-full p-3 rounded-lg pr-10 transition-all" placeholder="••••••••">
                                <button type="button" onclick="togglePass('newPassword')" class="absolute right-3 top-3.5 text-slate-500 hover:text-white transition-colors"><i class="fas fa-eye"></i></button>
                            </div>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-400 mb-2">Konfirmasi Password Baru</label>
                            <div class="relative">
                                <input type="password" id="confirmPassword" name="confirm_password" class="w-full p-3 rounded-lg pr-10 transition-all" placeholder="••••••••">
                                <button type="button" onclick="togglePass('confirmPassword')" class="absolute right-3 top-3.5 text-slate-500 hover:text-white transition-colors"><i class="fas fa-eye"></i></button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="flex justify-end gap-3 pt-6 border-t border-slate-700 mt-6">
                    <a href="/dardcorchat/dardcorai" class="px-6 py-2.5 rounded-lg border border-slate-600 text-slate-300 hover:bg-slate-800 hover:text-white transition-all text-sm font-medium">Batal</a>
                    <button type="submit" class="px-6 py-2.5 rounded-lg bg-gradient-to-r from-violet-600 to-fuchsia-600 hover:from-violet-500 hover:to-fuchsia-500 text-white font-medium shadow-lg shadow-purple-600/20 transition-all transform hover:scale-[1.02] text-sm">Simpan Perubahan</button>
                </div>

            </form>
        </div>
    </main>

    <script>
        function togglePass(id) {
            const input = document.getElementById(id);
            const icon = input.nextElementSibling.querySelector('i');
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }
    </script>
</body>
</html>