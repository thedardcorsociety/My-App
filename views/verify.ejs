<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="theme-color" content="#0b0c15">
    
    <title>Dardcor AI</title>
    <link rel="icon" href="/logo.png">
    <link rel="manifest" href="/manifest.json">

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/vs2015.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    
    <link rel="stylesheet" href="/css/tailwind.css">
    <link rel="stylesheet" href="/vendor/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="/css/atom-one-dark.min.css">
    <script src="/js/highlight.min.js"></script>
    <script src="/js/marked.min.js"></script>
    
    <style>
        html, body {
            height: 100%;
            width: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden;
            position: fixed;
            inset: 0;
            background-color: #0b0c15;
            font-family: 'Poppins', sans-serif;
        }

        .scroll-container {
            height: 100%;
            width: 100%;
            overflow-y: auto;
            -webkit-overflow-scrolling: touch;
        }

        .glass-card {
            background: rgba(19, 19, 31, 0.6);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(139, 92, 246, 0.2);
            box-shadow: 0 0 40px rgba(139, 92, 246, 0.15);
        }
        .otp-input:focus { border-color: #8b5cf6; outline: none; box-shadow: 0 0 10px rgba(139, 92, 246, 0.3); }
    </style>
</head>
<body>
    <div class="scroll-container flex items-center justify-center p-4">
        <div class="glass-card p-6 md:p-8 rounded-2xl w-full max-w-md text-center relative overflow-hidden my-auto">
            <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-violet-600 to-fuchsia-600"></div>
            <div class="w-14 h-14 md:w-16 md:h-16 bg-purple-500/10 rounded-full flex items-center justify-center mx-auto mb-6 border border-purple-500/30">
                <i class="fas fa-shield-alt text-2xl md:text-3xl text-purple-400"></i>
            </div>
            
            <h2 class="text-xl md:text-2xl font-bold text-white mb-2">Verifikasi Email</h2>
            <p class="text-gray-400 text-xs md:text-sm mb-6">Kode OTP telah dikirim ke <br><span class="text-purple-300 font-medium break-all"><%= email %></span></p>

            <form id="otpForm" class="space-y-6">
                <input type="hidden" id="userEmail" value="<%= email %>">
                <div class="flex justify-center gap-2">
                    <input type="text" maxlength="6" id="otp" class="w-full h-12 md:h-14 text-center text-xl md:text-2xl font-bold tracking-[0.5em] bg-[#1e293b] border border-gray-600 rounded-xl text-white focus:border-purple-500 focus:ring-1 focus:ring-purple-500 outline-none placeholder-gray-600" placeholder="000000" autocomplete="off">
                </div>
                <p id="msg" class="text-sm text-red-400 hidden"></p>
                <button type="submit" id="btnVerify" class="w-full py-3 md:py-3.5 rounded-xl bg-gradient-to-r from-violet-600 to-fuchsia-600 hover:from-violet-500 hover:to-fuchsia-500 text-white font-bold transition shadow-lg shadow-purple-600/20 flex justify-center items-center gap-2 text-sm md:text-base">
                    <span>Verifikasi</span>
                    <i class="fas fa-arrow-right"></i>
                </button>
            </form>
        </div>
    </div>

    <script>
        document.getElementById('otpForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const otp = document.getElementById('otp').value.trim();
            const email = document.getElementById('userEmail').value;
            const btn = document.getElementById('btnVerify');
            const msg = document.getElementById('msg');
            
            if(otp.length < 6) {
                msg.textContent = "Masukkan 6 digit kode OTP.";
                msg.classList.remove('hidden'); return;
            }
            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Memproses...';
            msg.classList.add('hidden');

            try {
                const res = await fetch('/verify-otp', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email, otp }) 
                });
                const data = await res.json();

                if(data.success) {
                    btn.innerHTML = '<i class="fas fa-check"></i> Akun Dibuat!';
                    btn.classList.add('bg-green-600');
                    msg.textContent = "Mengalihkan ke Dardcor AI...";
                    msg.classList.remove('text-red-400', 'hidden');
                    msg.classList.add('text-green-400');
                    setTimeout(() => {
                        window.location.href = data.redirectUrl || '/dardcorchat/dardcor-ai';
                    }, 1000);
                } else {
                    throw new Error(data.message);
                }
            } catch (err) {
                msg.textContent = err.message || "Gagal verifikasi.";
                msg.classList.remove('hidden', 'text-green-400');
                msg.classList.add('text-red-400');
                btn.disabled = false;
                btn.innerHTML = 'Verifikasi <i class="fas fa-arrow-right"></i>';
                btn.classList.remove('bg-green-600');
            }
        });
    </script>
</body>
</html>